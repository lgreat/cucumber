<decorators defaultdir="/WEB-INF/decorator">
    <!--
        NOTE: excludes have precendence over decorator patterns, so if a pattern is
        matched in both places, it will not be decorated
    -->
    <!--!!!!!DEPReCATED!!!!!...try to use brandPopupDecorator-->
    <decorator name="popupDecorator" page="popupDecorator.jspx">
        <pattern>/community/newsletters/popup/*</pattern>
        <pattern>/miniSelectAState.page*</pattern>
        <pattern>/community/mailToFriend.page*</pattern>
        <pattern>/promo/surveyPromoHover.page*</pattern>
        <pattern>/content/modulePlacer.page*</pattern>
    </decorator>
    <!--!!!!!DEPReCATED!!!!!...try to use brandPopupDecorator-->
    
    <decorator name="brandPopupDecorator" page="brandPopupDecorator.jspx">
        <pattern>/school/addComments.page*</pattern>
        <pattern>/school/updateRatings.page*</pattern>
        <pattern>/school/thankYouHover.page*</pattern>        
        <pattern>/community/registration/popup/*</pattern>        
    </decorator>

    <decorator name="communityAdDecorator" page="communityAdDecorator.jspx">
        <pattern>/ads/serveAds.page*</pattern>
    </decorator>

    <decorator name="newDecorator" page="newDecorator.jspx">
        <pattern>/test/testNewDecorator.page*</pattern>
    </decorator>

    <decorator name="cobrandHeaderGsFooter" page="standardDecorator.jspx">
        <pattern>/*</pattern>
        <pattern>/sandbox/testHover.page</pattern>
    </decorator>

    <!-- We have to explicitly exclude due to a Sitemesh 2.2.1 bug that truncates the closing html tag -->
    <excludes>
        <!-- Regularly used pages that shouldn't be decorated -->
        <pattern>*/monitor.page*</pattern>
        <pattern>*/batch.page*</pattern>
        <pattern>*/cache.page*</pattern>
        <pattern>*/sorry.page*</pattern>
        <pattern>*/compareSchools.page*</pattern>
        <pattern>*/community/conversion/*</pattern>
        <pattern>*/content/box/*</pattern>
        <pattern>*/search/raw.page*</pattern>
        <pattern>*/gsHeader.page*</pattern>
        <pattern>*/gsFooter.page*</pattern>
        <pattern>*/survey/admin.page*</pattern>
        <pattern>*/survey/edit.page*</pattern>
        <pattern>*/ads/tacoda/*</pattern>
        <pattern>*/sandbox/*</pattern>
        <pattern>*/tableMover.page*</pattern>
        <pattern>*/widget/*</pattern>
    </excludes>

</decorators>
