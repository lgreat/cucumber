</c:set>

<c:choose>
<!-- We don't allow staging to be crawled -->
<c:when test="${requestScope.pageHelper.stagingServer or requestScope.pageHelper.adminServer}">
User-agent: *
Disallow: /    
</c:when>

<!-- If we're on a cobrands only allow very specific bots -->
<c:when test="${requestScope.context.cobranded}">
User-agent: Slurp
${excludes}
${sitemapExcludes}

User-agent: Googlebot
${excludes}
${sitemapExcludes}

User-agent: MSNBot
${excludes}
${sitemapExcludes}

User-agent: Teoma
${excludes}
${sitemapExcludes}

User-agent: *
Disallow: /
</c:when>

<!-- Otherwise on the main site just show the standard exclude list -->
<c:otherwise>
User-agent: Googlebot
${excludes}
${sitemapExcludes}

User-agent: Mediapartners-Google
${excludes}
${sitemapExcludes}

User-agent: Adsbot-Google
${excludes}
${sitemapExcludes}

User-agent: *
${excludes}
Sitemap: http://www.greatschools.net/sitemap/sitemap.xml.gz
</c:otherwise>
</c:choose>
