          xmlns:gsweb="gstaglib"
        >
    <jsp:directive.page contentType="text/plain"/>
<c:set var="sitemapExcludes">
<!-- List of URL's for the sitemap, to disallow some bots from crawling them -->
Disallow: /sitemap/
    
</c:set>
