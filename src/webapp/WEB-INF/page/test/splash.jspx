<?xml version="1.0" encoding="UTF-8"?>
<jsp:root xmlns:jsp="http://java.sun.com/JSP/Page" version="1.2"
          xmlns="http://www.w3c.org/1999/xhtml"
          xmlns:c="http://java.sun.com/jsp/jstl/core"
          xmlns:gsml="urn:jsptagdir:/WEB-INF/tags/gsml"
          xmlns:pageHelper="urn:jsptagdir:/WEB-INF/tags/pageHelper"
          xmlns:link="urn:www.greatschools.net/taglib/link"
          xmlns:content="urn:www.greatschools.net/taglib/content"
          xmlns:mod="urn:jsptagdir:/WEB-INF/tags/mod"
          xmlns:rss="urn:jsptagdir:/WEB-INF/tags/rss"
          xmlns:gsweb="gstaglib"
          xmlns:cache="http://jakarta.apache.org/taglibs/cache-1.0"
        >
<jsp:directive.page import="gs.data.content.INewsItemDao"/>
<jsp:directive.page import="gs.data.content.NewsItem"/>
<jsp:directive.page import="gs.web.ISessionContext"/>
<jsp:directive.page import="gs.web.SessionContextUtil"/>
<jsp:directive.page import="org.springframework.context.ApplicationContext"/>
<html lang="en">

<jsp:output doctype-root-element="html"
            doctype-public="-//W3C//DTD XHTML 1.0 Transitional//EN"
            doctype-system="http://www.w3c.org/TR/xhtml1/DTD/xhtml1-transitional.dtd"/>

<jsp:directive.page contentType="text/html"/>

<head>
    <title>GreatSchools.net</title>
    <pageHelper:setPathway pathway="0"/>

    <jsp:scriptlet>
        ISessionContext sessionContext = SessionContextUtil.getSessionContext(request);
        ApplicationContext ac = sessionContext.getApplicationContext();

        INewsItemDao newsItemDao = (INewsItemDao) ac.getBean(INewsItemDao.BEAN_ID);
        NewsItem newsItem = newsItemDao.nextInRotation("NEWS");
        pageContext.setAttribute("newsItem", newsItem);
    </jsp:scriptlet>

</head>

<gsml:body adPageName="splash">
    <pageHelper:externalCss file="/res/css/splash.css"/>

    <table cellpadding="0" cellspacing="0" width="100%">
        <tr>
            <td id="houseAd">
                <p><span>&#160;</span>Track you child's learning grade-by-grade with our free newsletters that parents
                    love.</p>
                <gsml:a href="#"><span>&#160;</span>Sign up for newsletters</gsml:a>
            </td>
            <td width="8">
            </td>
            <td  id="findAndCompare" width="275" >
                    <div id="findAndCompareSchoolsNationwide">
                        <h3><em>FIND and COMPARE</em> schools nationwide:</h3>
                        <gsml:form action="/search/search.page" method="GET">
                            <input type="text" value="" name="q" size="20"/>
                            &#160;
                            <gsweb:stateSelector usingLongNames="false" state="${requestScope.context.stateOrDefault}"/>
                            <input type="hidden" value="school" name="type"/>
                            <br />
                            <gsml:url var="go" value="/res/img/splash/go.gif"/>
                                <input type="image" src="${go}" alt="go" style="width:41px;height:26px;margin-top: 10px"
                                       class="button"/>
                        </gsml:form>
                    </div>

                    <div id="getIdeasAndLearnMoreAbout">
                        <h3>Get <em>IDEAS and LEARN MORE</em> about:</h3>
                        <gsml:form action="/redirect.page" method="GET" >
                            <div style="display: block; ">
                            <select name="page">
                                <option value="/content/backToSchool.page">Back to school success tips</option>
                                <option value="/content/backToSchool.page"> Back to school shopping </option>
                                <option value="/search/search.page?q=Troubleshooter&amp;type=topic"> Ask an Expert </option>
                                <option value="/search/search.page?q=reading tips&amp;type=topic"> Reading tips </option>
                                <option value="/search/search.page?q=math tips&amp;type=topic"> Math tips </option>
                                <option value="/content/summerReading.page"> Summer reading </option>
                                <option value="/search/search.page?q=bullying&amp;type=topic"> Bullying </option>
                                <option value="/search/search.page?q=homework&amp;type=topic"> Homework battles </option>
                                <option value="/search/search.page?q=food&amp;type=topic"> Healthy food ideas </option>
                                <option value="/content/schoolChoiceCenter"> Choosing a school </option>
                                <option value="/search/search.page?q=Troubleshooter&amp;type=topic"> Private vs. public vs. charter </option>
                                <option value="/content/guideToTests.page"> Standardized tests </option>
                                <option value="/search/search.page?q=Troubleshooter&amp;type=topic"> Improving your school </option>
                                <option value="/search/search.page?q=raise+funds&amp;type=topic"> Raising money for your school </option>

                                <option value="/search/search.page?q=Troubleshooter&amp;type=topic"> How schools work </option>


                                <option value="/search/search.page?q=violence&amp;type=topic"> Making your school safe: </option>


                                <option value="/search/search.page?q=special+education&amp;type=topic"> Learning disabilities </option>

                                <option value="/cgi-bin/showarticle/CA/97"> Gifted and talented kids </option>


                                <option value="/search/search.page?q=kindergarten&amp;type=topic"> Kindergarten </option>


                                <option value="/search/search.page?q=first grade&amp;type=topic"> First grade </option>

                                <option value="/search/search.page?q=second grade&amp;type=topic"> Second grade </option>


                                <option value="/search/search.page?q=third grade&amp;type=topic"> Third grade </option>
                            </select>
                            &#160;
                            <gsml:url var="go" value="/res/img/splash/go.gif"/>
                                <input type="image" src="${go}" alt="go" style="width:41px;height:26px;"
                                       class="button"/>
                            </div>
                        </gsml:form>
                    </div>
            </td>
        </tr>
    </table>
    <div class="bigDottedDivider">&#160;</div>
    <table cellpadding="0" cellspacing="0" width="100%">
        <tr>
            <td style="vertical-align: top; height: 100%; width: 428px">
                <div id="week">
                    <h3>This Week at GreatSchools</h3>
                    <ul>
                        <li class="burst"><content:newsItem category="SPLASH POSITION 1" /></li>
                        <li class="dialog"><content:newsItem category="SPLASH POSITION 2" /></li>
                        <li class="checkmark"><content:newsItem category="SPLASH POSITION 3" /></li>
                    </ul>
                    <c:if test="${not empty newsItem}">
                        <div id="didYouKnow">
                            <h3>Did ya know?</h3>
                            ${newsItem.text}
                            <c:if test="${not empty newsItem.link}">
                                <gsml:a href="${newsItem.link}">Read More</gsml:a>
                            </c:if>
                        </div>
                    </c:if>
                </div>
            </td>
            <td width="8">
            </td>
            <td width="8">
            </td>
            <td style="vertical-align: top; height: 100%; width: 424px">
                <div id="billsBlog">
                    <h3>BILL'S BLOG<h4>Founder &amp; CEO of GreatSchools</h4></h3>

                    <div class="rss">
                        <cache:cache scope="application" name="blog" key="bill">
                            <content:blogFeed atomUrl="http://billsblog.greatschools.net/atom.xml"
                                              defaultTitle="Bill's thoughts on education"
                                              defaultUrl="http://billsblog.greatschools.net"/>
                        </cache:cache>
                    </div>
                </div>
            </td>
        </tr>
    </table>

</gsml:body>
</html>
</jsp:root>