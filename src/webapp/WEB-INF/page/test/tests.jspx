<?xml version="1.0" encoding="UTF-8"?>
<jsp:root xmlns:jsp="http://java.sun.com/JSP/Page" version="1.2"
          xmlns="http://www.w3c.org/1999/xhtml"
          xmlns:c="http://java.sun.com/jsp/jstl/core"
          xmlns:gsml="urn:jsptagdir:/WEB-INF/tags/gsml"
          xmlns:mod="urn:jsptagdir:/WEB-INF/tags/mod"
          xmlns:promo="urn:jsptagdir:/WEB-INF/tags/promo"
          xmlns:pageHelper="urn:jsptagdir:/WEB-INF/tags/pageHelper"
          xmlns:link="urn:www.greatschools.net/taglib/link"
          xmlns:search="urn:jsptagdir:/WEB-INF/tags/search"
          xmlns:gsweb="gstaglib"
        >
    <jsp:directive.page import="gs.data.geo.IGeoDao"/>
    <jsp:directive.page import="gs.data.school.ISchoolDao"/>
    <jsp:directive.page import="gs.web.util.context.ISessionContext"/>
    <jsp:directive.page import="gs.web.util.context.SessionContext"/>
    <jsp:directive.page import="org.springframework.context.ApplicationContext"/>
    <jsp:directive.page import="gs.web.util.context.SessionContextUtil"/>
    <jsp:directive.page import="gs.web.util.context.SessionContextUtil"/>
    <jsp:directive.page import="gs.data.state.State"/>
    <jsp:directive.page import="gs.data.test.ITestDataSetDao"/>
    <jsp:directive.page import="java.util.List"/>
    <jsp:directive.page import="gs.data.test.TestDataSetDaoHibernate"/>
    <jsp:directive.page import="gs.data.test.TestDataTypeDaoHibernate"/>
    <jsp:directive.page import="java.util.Iterator"/>
    <jsp:directive.page import="gs.data.school.Grades"/>
    <jsp:directive.page import="gs.data.school.Grade"/>
    <jsp:directive.page import="java.util.ArrayList"/>
    <jsp:directive.page import="gs.data.test.TestManager"/>
    <html lang="en">

    <jsp:output doctype-root-element="html"
                doctype-public="-//W3C//DTD XHTML 1.0 Transitional//EN"
                doctype-system="http://www.w3c.org/TR/xhtml1/DTD/xhtml1-transitional.dtd"/>

    <jsp:directive.page contentType="text/html"/>
    <jsp:scriptlet>
        ISessionContext sessionContext = SessionContextUtil.getSessionContext(request);
        ApplicationContext ac = sessionContext.getApplicationContext();

        String yearStr = request.getParameter("year");
        int year = Integer.parseInt(yearStr);

        State state = sessionContext.getState();

        TestDataSetDaoHibernate testDataSetDao = (TestDataSetDaoHibernate) ac.getBean(ITestDataSetDao.BEAN_ID);

        List subjectIds = testDataSetDao.findSubjects(state, year);
        pageContext.setAttribute("subjectIds", subjectIds);

        TestManager testManager = (TestManager) ac.getBean(TestManager.BEAN_ID);
        List subjects= new ArrayList();
        for (Iterator iter = subjectIds.iterator(); iter.hasNext();) {
            Integer id = (Integer) iter.next();
            subjects.add(testManager.getSubjectFromId(id.intValue()));
        }
        pageContext.setAttribute("subjects", subjects);


        List dataTypeIds = testDataSetDao.findDataTypeIds(state, year);
        pageContext.setAttribute("dataTypeIds", dataTypeIds);

        TestDataTypeDaoHibernate testDataTypeDao = (TestDataTypeDaoHibernate) ac.getBean(TestDataTypeDaoHibernate.BEAN_ID);
        List dataTypes = new ArrayList();
        for (Iterator iter = dataTypeIds.iterator(); iter.hasNext();) {
            Integer id = (Integer) iter.next();
            dataTypes.add(testDataTypeDao.getDataType(id.intValue()));
        }
        pageContext.setAttribute("dataTypes", dataTypes);

        pageContext.setAttribute("allGrades", Grades.createGrades(Grade.KINDERGARTEN, Grade.G_12));

        for (Iterator iter = Grade.iterator(); iter.hasNext();) {
            Grade grade = (Grade) iter.next();
            List list = testDataSetDao.findDataSets(state, year, null, null, grade, true);
            pageContext.setAttribute(grade.getName(), list);
        }

    </jsp:scriptlet>

    <head>
        <title></title>
        <style>
        </style>
        <pageHelper:setPathway pathway="1"/>
    </head>

    <gsml:body adPageName="modal" pageLayout="research">
        <table>
            <tr>
                <th>Subjects:</th>
                <c:forEach var="dt" items="${pageScope.subjects}">
                    <th>
                        ${dt.name}
                    </th>
                </c:forEach>
            </tr>
            <tr>
                <c:forEach var="dt" items="${pageScope.dataTypeIds}">
                    <th>
                        ${dt}
                    </th>
                </c:forEach>
            </tr>
            <c:forTokens delims="," var="g" items="${allGrades.commaSeparatedString}">
                <tr>
                    <td>${g}</td>
                </tr>
            </c:forTokens>
        </table>


    </gsml:body>
    </html>
</jsp:root>