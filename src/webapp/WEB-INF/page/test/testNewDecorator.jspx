<?xml version="1.0" encoding="UTF-8"?>
<jsp:root xmlns:jsp="http://java.sun.com/JSP/Page" version="1.2"
          xmlns="http://www.w3.org/1999/xhtml"
          xmlns:c="http://java.sun.com/jsp/jstl/core"
          xmlns:gsml="urn:jsptagdir:/WEB-INF/tags/gsml"
          xmlns:mod="urn:jsptagdir:/WEB-INF/tags/mod"
          xmlns:promo="urn:jsptagdir:/WEB-INF/tags/promo"
          xmlns:pageHelper="urn:jsptagdir:/WEB-INF/tags/pageHelper"
          xmlns:link="urn:www.greatschools.org/taglib/link"
          xmlns:search="urn:jsptagdir:/WEB-INF/tags/search"
          xmlns:gsweb="gstaglib"
          xmlns:display="urn:jsptld:http://displaytag.sf.net"
          xmlns:ad="urn:jsptagdir:/WEB-INF/tags/ad"
          xmlns:cache="http://jakarta.apache.org/taglibs/cache-1.0"
          xmlns:content="urn:www.greatschools.org/taglib/content"
          xmlns:fn="http://java.sun.com/jsp/jstl/functions"
          xmlns:school="urn:jsptagdir:/WEB-INF/tags/school"
        >
<html lang="en">
<jsp:directive.page contentType="text/html"/>
<pageHelper:setPathway pathway="COMMUNITY_LANDING"/>
<head>
    <title>GreatSchools Community</title>
    <pageHelper:externalCss file="/res/css/promo/promo.css"/>
    <pageHelper:externalCss file="/res/css/community/registration/communityLanding.css"/>
</head>
<gsml:body adPageName="communityLanding">
    <div id="outline"><!-- creates darker blue outer outline -->
        <div id="content">
            <div id="leftSide">
                <gsml:img src="/res/img/community/registration/commimage.jpg" alt="Community teaser"/>
            </div>
            <div id="rightSide">
                <gsml:img styleClass="comingSoon" src="/res/img/community/registration/GS_communityteaser_header.gif" alt="Coming soon: GreatSchools Community!"/>
                <c:choose>
                    <c:when test="${escapedMessage ne null and escapedMessage gt ''}">
                        <div class="infomessage">
                          ${escapedMessage}
                        </div>
                    </c:when>
                    <c:otherwise>
                        <p class="announcement">
                            We're excited to announce that GreatSchools will soon launch a community for parents
                            who are passionate about education!  Does your child need help with homework? Get
                            tips from other parents who've been there. Do you have school fundraising tips to
                            share? Share your stories with parents tackling similar issues. Check back here for
                            updates!
                        </p>
                        <p class="joinCommunityText">
                            Join now and we'll alert you when we launch!
                        </p>
                        <link:registration email="${user.email}">
                            <gsml:img src="/res/img/community/registration/GS_communityteaser_button1.gif" alt="Join the community"/>
                        </link:registration>
                    </c:otherwise>
                </c:choose>
                <p class="joinBetaText">
                    Take community for a pre-launch test drive:
                </p>
                <link:betaSignup email="${user.email}">
                    <gsml:img src="/res/img/community/registration/GS_communityteaser_button2.gif" alt="Join our beta group"/>
                </link:betaSignup>
            </div>
        </div>
    </div>

    <div class="bigDottedDivider"><hr/></div>
    <table id="bottomContent" cellpadding="0" cellspacing="0" width="100%">
        <tr>
            <td class="contentCell left">
                <div class="leftImage">
                    <gsml:img src="/res/img/community/registration/stars.gif" alt="Stars"/>
                </div>
            </td>
            <td class="contentCell">
                <div class="rBox" id="youtube">
                    <gsml:img styleClass="headline" src="/res/img/community/registration/whatdoyouwant.gif"
                              alt="What do you want to ask the next president about K-12 education?"/>
                    <div>
                        Join other GreatSchools parents and create a video question about education
                        for the presidential candidates. You could see it answered on live TV!
                    </div>
                    <gsml:a href="/promo/youTubeVideo.page">Learn more &gt;</gsml:a>
                </div>
            </td>
            <td width="8"></td>
            <td width="1" style="background-color: #ddd"></td>
            <td width="8"></td>
            <td class="contentCell right">
                <div class="leftImage">
                    <gsml:img src="/res/img/community/registration/the_team.jpg" alt="Photo of Community Team"/>
                </div>
            </td>
            <td class="contentCell">
                <div class="rBox" id="commBlog">
                    <gsml:popupWindow href="http://communityblog.greatschools.org" width="800" height="600" left="50" top="50">
                        <gsml:img styleClass="headline" src="/res/img/community/registration/communityblog.gif" alt="Community Team Blog"/>
                    </gsml:popupWindow>
                    <div>
                        <cache:cache scope="application" name="blog" key="community">
                            <content:blogFeed atomUrl="http://communityblog.greatschools.org/atom.xml"
                                              defaultTitle="GreatSchools Community Blog"
                                              defaultUrl="http://communityblog.greatschools.org"
                                              type="billsBlog"/>
                        </cache:cache>
                        <br/>
                        <gsml:url var="read" value="/res/img/community/registration/read.gif"/>
                        <gsml:popupWindow href="http://communityblog.greatschools.org" width="800" height="600" left="50" top="50">
                            <gsml:img styleClass="read" src="${read}" alt="Read the Community Blog"/>
                        </gsml:popupWindow>
                    </div>
                </div>
            </td>
        </tr>
    </table>

    <c:set var="hier" value="Community,Landing Page"/>
    <c:if test="${escapedMessage ne null and escapedMessage gt ''}">
        <c:set var="hier" value="Community,Landing Page,Registration Confirmation"/>
    </c:if>

    <mod:tracking pageName="Community Landing Page"
                  hier1="${hier}"/>

</gsml:body>
</html>
</jsp:root>