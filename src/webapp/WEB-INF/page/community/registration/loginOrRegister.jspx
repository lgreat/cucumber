<?xml version="1.0" encoding="UTF-8"?>
<jsp:root
        xmlns:jsp="http://java.sun.com/JSP/Page" version="1.2"
        xmlns="http://www.w3.org/1999/xhtml"
        xmlns:c="http://java.sun.com/jsp/jstl/core"
        xmlns:fmt="http://java.sun.com/jsp/jstl/fmt"
        xmlns:fn="http://java.sun.com/jsp/jstl/functions"
        xmlns:spring="http://www.springframework.org/tags"
        xmlns:gsml="urn:jsptagdir:/WEB-INF/tags/gsml"
        xmlns:mod="urn:jsptagdir:/WEB-INF/tags/mod"
        xmlns:pageHelper="urn:jsptagdir:/WEB-INF/tags/pageHelper"
        xmlns:gsweb="gstaglib"
        xmlns:link="urn:www.greatschools.org/taglib/link"
        xmlns:ad="urn:jsptagdir:/WEB-INF/tags/ad"
        >
    <html lang="en">
    <jsp:output doctype-root-element="html"
                doctype-public="-//W3C//DTD XHTML 1.0 Transitional//EN"
                doctype-system="http://www.w3c.org/TR/xhtml1/DTD/xhtml1-transitional.dtd"/>

    <jsp:directive.page contentType="text/html"/>
    <pageHelper:setPathway pathway="COMMUNITY_LANDING"/>
    <head>
        <![CDATA[<meta http-equiv="Content-Type" content="text/html;charset=utf-8"/>]]>
        <title>Join &amp;amp; Sign In - GreatSchools</title>
    </head>

    <gsml:body adPageName="signin" pageLayout="balanced">

        <ad:setSlotPrefix slotPrefix="CommunityLoginOrRegister"/>

<div id="inlineSignin">
        <c:set var="alertMessageType" value="${requestScope.alertMessageType}"/>

        <div id="newuser" class="size1of2 col">
            <c:if test="${alertMessageType ne null and alertMessageType ne ''}">
                <p class="infoMessage">
                    <span class="sprite i-alert"><!--icon--></span>
                <span>Please login or register to
                    <c:choose>
                        <c:when test="${alertMessageType eq 'Question'}">
                            post your question.
                        </c:when>
                        <c:when test="${alertMessageType eq 'Group'}">
                            create your group.
                        </c:when>
                        <c:when test="${alertMessageType eq 'Advice'}">
                            write advice.
                        </c:when>
                        <c:when test="${alertMessageType eq 'MSL'}">
                            access My School List.
                        </c:when>
                    </c:choose>
                </span>
                </p>
            </c:if>

            <div class="mod">
                <div class="mod_hd">
                    <h2>Not a Member?</h2>
                </div>
                <div class="mod_bd">
                    <h4 class="introTextbold">Join GreatSchools</h4>

                    <div id="joinImage">
                        <link:registration email="${loginCmd.email}" redirect="${loginCmd.redirect}">
                            <img src="/res/img/community/registration/signinInlinePhoto.jpg" class="fltlft"
                                 id="newuserImage" width="280" height="190" alt="Photo of mother and son"/>
                        </link:registration>

                            <p class="firstPara">
                                <link:registration email="${loginCmd.email}" redirect="${loginCmd.redirect}">
                                    <span class="text1">Are you new to GreatSchools?</span>
                                </link:registration>
                            </p>

                            <h3>
                                <link:registration email="${loginCmd.email}" redirect="${loginCmd.redirect}">
                                    <span class="title1-06b">Join Now </span><span class="sprite join"><!--icon--></span>
                                </link:registration>
                            </h3>

                            <p>
                                <link:registration email="${loginCmd.email}" redirect="${loginCmd.redirect}">
                                    <span class="text1-d61">IT'S FREE!</span>
                                </link:registration>
                            </p>
                            <br class="clearfloat"/>


                    </div>

                    <div id="joinText">
                        <p class="text1bold">It's free and easy to join GreatSchools. As a member, you can:</p>
                        <ul>
                            <li><span class="text2"><span class="text2bold">Find the right school.</span>
                        More than 500,000 ratings and reviews nationwide</span></li>
                            <li><span class="text2"><span class="text2bold">Track your child's education.</span>
                        Free newsletters tell you what your child should be learning, grade-by-grade</span></li>
                            <li><span class="text2"><span class="text2bold">Connect with other parents.</span>
                        Talk about local schools and education in our parent community</span></li>
                        </ul>

                    </div>

                </div>
            </div>
            <!-- end: newuser -->
        </div>

        <div id="returninguser" class="size1of2 col">

            <div class="mod">
                <div class="mod_hd">
                    <h2>Returning Member?</h2>
                </div>

                <div class="mod_bd">

                    <c:if test="${param.message ne null and param.message gt ''}">
                        <c:set var="message" value="${gsweb:escapeHtml(param.message)}"/>
                    </c:if>
                    <c:set var="messageClass" value=""/>
                    <c:if test="${message ne null and message gt ''}">
                        <c:set var="messageClass" value="hasMessage"/>

                        <p class="warning infoMessage">
                            <span class="sprite i-alert"><!-- not empty --></span>
                            <span>${message}</span>
                        </p>
                    </c:if>

                    <h4 class="introTextbold">Yes! I'm already a member</h4>

                    <gsweb:form action="/community/loginOrRegister.page" method="post">
                        <fieldset class="account text2bold">
                            <legend><!-- do not collapse --></legend>
                            <spring:bind path="loginCmd.redirect">
                                <input type="hidden" name="${status.expression}" value="${status.value}"/>
                            </spring:bind>

                            <gsml:errorMessage command="loginCmd" styleClass="warning ${messageClass}" useImage="true"/>

                            <ul id="returninguserForm" class="${messageClass}">
                                <li>
                                    <label for="emailAddress">Email address</label>
                                    <spring:bind path="loginCmd.email">
                                        <input id="emailAddress" type="text" name="${status.expression}"
                                               value="${status.value}"/>
                                    </spring:bind>
                                </li>
                                <li>
                                    <label for="password">Password</label>
                                    <spring:bind path="loginCmd.password">
                                        <input id="password" type="password" name="${status.expression}" value=""/>
                                    </spring:bind>
                                </li>
                            </ul>
                        </fieldset>
                        <fieldset class="submit text2">
                            <legend><!-- do not collapse --></legend>
                            <ul>
                                <li id="rememberMe">
                                    <gsml:checkbox name="loginCmd.rememberMe"
                                                   checked="${loginCmd.rememberMe}"
                                                   styleClass="checkbox" styleId="rememberMeBox"/>
                                    <label class="checkboxLabel text2" for="rememberMeBox">Keep me logged in</label>
                                </li>
                                <li>

                                    <button class="button-1 fltlft" type="submit" id="goButton" name="Submit" value="Submit">Sign in</button>
                                    <br class="clearfloat"/>
                                </li>
                                <li id="forgotPassword">
                                    <c:choose>
                                        <c:when test="${loginCmd.email != null and loginCmd.email != ''}">
                                            <link:forgotPassword email="${loginCmd.email}"
                                                                 title="Forgot password">Forgot password?</link:forgotPassword>
                                        </c:when>
                                        <c:otherwise>
                                            <link:forgotPassword
                                                    title="Forgot password">Forgot password?</link:forgotPassword>
                                        </c:otherwise>
                                    </c:choose>
                                </li>
                            </ul>
                        </fieldset>
                    </gsweb:form>
                </div>
            </div>
        </div>

        <!-- end: returninguser -->

        </div>

        <mod:tracking pageName="Login or Register"
                      hier1="Account,Registration,Login"/>
    </gsml:body>
    </html>
</jsp:root>