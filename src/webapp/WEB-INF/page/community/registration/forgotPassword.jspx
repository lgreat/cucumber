<jsp:root xmlns:jsp="http://java.sun.com/JSP/Page"
          xmlns:gsml="urn:jsptagdir:/WEB-INF/tags/gsml"
          xmlns:c="http://java.sun.com/jsp/jstl/core"
          xmlns:spring="http://www.springframework.org/tags"
          xmlns:mod="urn:jsptagdir:/WEB-INF/tags/mod"
          xmlns:pageHelper="urn:jsptagdir:/WEB-INF/tags/pageHelper"
          xmlns:gsweb="gstaglib"
          xmlns:link="urn:www.greatschools.org/taglib/link"
          xmlns="http://www.w3.org/1999/xhtml" version="2.0">
<jsp:directive.page contentType="text/html"/>
<html>
<pageHelper:setPathway pathway="COMMUNITY_LANDING"/>
  <head>
      <pageHelper:externalCss file="/res/css/community/registration/forgotPassword.css"/>
      <title>Forgot your password - GreatSchools</title>
  </head>
  <body>

  <div id="outline">
      <h2>Forgot Your Password?</h2>

      <h3>Please enter the email address associated with your account.
          Instructions for selecting a new password will be emailed to you.</h3>

      <gsweb:form action="/community/forgotPassword.page" method="post">
          <label for="emailEntry" id="emailEntryLabel">Email address</label>
          <spring:bind path="userCmd.email">
              <input id="emailEntry" type="text" name="email" value="${userCmd.email}" tabindex="1"/>
          </spring:bind>
          <spring:bind path="userCmd.referrer">
              <input type="hidden" name="referrer" value="${userCmd.referrer}"/>
          </spring:bind>
          <spring:hasBindErrors name="userCmd">
              <spring:bind path="userCmd.email">
                  <c:if test="${status.errorMessage gt '' or status.errorCode gt ''}">
                      <gsml:img src="/res/img/bullet/icon_warning_12x12.gif"
                                alt="Error" id="errorImage"/>
                      <p id="errorText"><spring:message code="${status.errorCode}" text="${status.errorMessage}"/></p>
                  </c:if>
              </spring:bind>
          </spring:hasBindErrors>
          <br style="clear:left;"/>

          <gsml:inputImage src="/res/img/community/registration/sendbutton.gif"
                           alt="Send" name="submit"
                           id="resetButton" tabIndex="3"/>
          <gsml:inputImage src="/res/img/community/registration/cancel.gif"
                           alt="Cancel" name="cancel"
                           id="cancelButton" tabIndex="2"/>
      </gsweb:form>
  </div>
  <mod:tracking pageName="Forgot Password Entry"
                hier1="Account,Registration,Forgot Password Entry"/>
  </body>
</html>
</jsp:root>