<jsp:root xmlns="http://www.w3.org/1999/xhtml"
          xmlns:ad="urn:jsptagdir:/WEB-INF/tags/ad"
          xmlns:c="http://java.sun.com/jsp/jstl/core"
          xmlns:community="urn:jsptagdir:/WEB-INF/tags/community"
          xmlns:fn="http://java.sun.com/jsp/jstl/functions"
          xmlns:gsml="urn:jsptagdir:/WEB-INF/tags/gsml"
          xmlns:jsp="http://java.sun.com/JSP/Page"
          xmlns:link="urn:www.greatschools.org/taglib/link"
          xmlns:map="urn:jsptagdir:/WEB-INF/tags/map"
          xmlns:mod="urn:jsptagdir:/WEB-INF/tags/mod"
          xmlns:pageHelper="urn:jsptagdir:/WEB-INF/tags/pageHelper"
          xmlns:school="urn:jsptagdir:/WEB-INF/tags/school"
          xmlns:search="urn:jsptagdir:/WEB-INF/tags/search"
          xmlns:variant="urn:jsptagdir:/WEB-INF/tags/variant"
          version="2.0">
<jsp:directive.page import="gs.web.util.PageHelper"/>
<jsp:directive.page import="gs.web.util.context.SessionContext"/>
<jsp:directive.page import="gs.web.util.context.SessionContextUtil"/>
<jsp:directive.page import="gs.web.util.UrlBuilder"/>

<html lang="en">
<jsp:output doctype-root-element="html"
            doctype-public="-//W3C//DTD XHTML 1.0 Transitional//EN"
            doctype-system="http://www.w3c.org/TR/xhtml1/DTD/xhtml1-transitional.dtd"/>
<jsp:directive.page contentType="text/html"/>

<head>
    <title>My School List</title>
    <ad:setSlotPrefix slotPrefix="My_School_List"/>
    <!--<pageHelper:externalCss file="/res/css/community/mySchoolList.css"/>-->
    <!--<pageHelper:externalCss file="/res/css/search/schoolResults.css"/>-->
    <!--<pageHelper:externalCss file="/res/css/brand.css"/>-->
    <!--<pageHelper:externalCss file="/res/css/school/schoolsTable.css"/>-->
    <jsp:scriptlet>
        request.setAttribute("communityAuth", PageHelper.isCommunityCookieSet(request));
        SessionContext sessionContext = SessionContextUtil.getSessionContext(request);
        request.setAttribute("communityHost", sessionContext.getSessionContextUtil().getCommunityHost(request));
    </jsp:scriptlet>
    <!--<gsml:equalizeColumns ids="'col_left','col_right'"/>-->
</head>
<gsml:body adPageName="mySchoolList" pageLayout="nocol">

    <div class="slStylesV1-0">
        <div class="spacer_20"><!-- do not collapse --></div>

        <c:set var="username"
               value="${(requestScope.context.screenName != null)?requestScope.context.screenName:fn:substringBefore(requestScope.context.user.email, '@')}"/>

        <div class="grid_16">

            <h1>My School List</h1>

            Should show PYOC? ${showPYOCModule}
            <a onclick="GSType.hover.printSchoolChooser.showHover(); return false;">Print</a>

            <c:set var="logoutRedirect" value="/mySchoolListLogin.page"/>


            <h5 id="msl_welcome">Welcome ${username}! <span class="small quiet">(not <a
                    href="/community/logout.page?redirect=${logoutRedirect}">${username}</a>?)</span>
            </h5>

            <c:if test="${not empty schools}">
                <school:schoolsTable schools="${schools}"/>
            </c:if>

            <div class="mod standard_2-1">
                <div class="inner">
                    <div class="bd">
                        <p class="small_bold bottom">About Saved Schools</p>

                        <div class="spacer_5"><!-- do not collapse --></div>
                        <p class="small bottom">
                            GreatSchools offers two convenient ways to bookmark saved schools for quick recall later. The one you see depends on how you view our website.
                        </p>

                        <div class="spacer_5"><!-- do not collapse --></div>
                        <ul class="small">
                            <li>"My School List" (full desktop site): "My School List" is a feature that allows you to save schools to your GreatSchools member account. Your GreatSchools member account is only available when visiting our full website.</li>
                            <li>"My Saved Schools" (mobile site): "My Saved Schools" is a feature that allows you to save schools on your mobile phone. "My saved Schools" are available only when visiting our mobile website.</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- typeOverride used in searchControl.tagx and/or mod:browseState -->
            <c:set var="typeOverride" value="school" scope="request"/>

                <search:searchControl rememberQuery="true"
                                      showStates="true"
                                      showLinks="true"
                                      fieldLength="30"/>

        </div>

        <div class="grid_8">


            <ad:AboveFold_300x250/>
            <ad:Top_300x137/>

        </div>
        <div class="spacer">
            <!-- don't collapse -->
        </div>
        <mod:tracking pageName="MSL Logged In"
                      hier1="MySchoolList,MSLloggedin"/>

    </div>

</gsml:body>
</html>
</jsp:root>