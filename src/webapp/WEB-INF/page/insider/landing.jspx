        <jsp:directive.page contentType="text/html"/>

        <head>
            <![CDATA[
        <meta http-equiv="Content-Type" content="text/html;charset=utf-8"></meta>
            ]]>
            <title>GreatSchools Insider</title>
            <style type="text/css">
            body {
            background-color:#FFF;
            font-family: Arial, Sans;
            padding: 0px 0px 0px 0px;
            margin: 0px 0px 0px 0px;
            width: 100%;
            height:100%;
            }
            h3 {
            font-size:110%;
            padding: 5px 0px 10px 0px;
            margin: 0px 0px 0px 0px;
            }
            #header div.column1 {
            float:left;
            padding: 0px 20px 0px 10px;
            }
            #header div.column2 {
            position:absolute; left: 250px; top: 10px;
            }
            #header div.column3 {
            float:right;
            font-size:70%;
            padding: 10px 10px 0px 0px;
            }

            #main div.column1 {
            position:absolute;
            left: 0px;
            top: 110px;
            width:250px;
            }
            #main div.column2 {
            position:absolute;
            left: 250px;
            top: 110px;
            background-color: #eee;
            width:60%;
            height:78%;
            overflow:auto;
            padding: 0 20px 0 10px;
            border: 1px solid black;
            border-width: 1px 2px 2px 1px;
            border-color: #aaa #ccc #ccc #aaa;
            }

            div.panel {
            position:absolute;
            width:90%;
            font-size:90%;
            line-height:100%;
            }
            #nav {
            padding: 0px 10px 0px 10px;
            vertical-align:middle;
            line-height:160%;
color: #039;
            font-weight:bold;
            }
            #nav a {
            color: #039;
            }

            #footer {
            position:absolute; left: 0px; top: 96%;
            padding: 0px 25px 0px 0px;
            font-size:90%;
            }
            .pdf {
                float: right;
                width: 32px;
                padding: 0 10px 0 30px;
border: 0;
            }

            a>img {
                 border: 0
            }

            h4 {
                font-size: 100%;
                margin: 0 0 0 0;
            }


            div.column2 div.panel li {
                padding: 0 0 4px 0;
            }
            div.column2 div.panel a {
                text-decoration: underline;
color: #039;
            }
            div.column2 div.panel a:hover {
                text-decoration: underline;
            }
