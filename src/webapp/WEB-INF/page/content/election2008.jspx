            doctype-system="http://www.w3c.org/TR/xhtml1/DTD/xhtml1-transitional.dtd"/>

<jsp:directive.page contentType="text/html"/>
<pageHelper:setPathway pathway="COUNTDOWN_COLLEGE"/>
<pageHelper:hideFooterAd/>
<pageHelper:hideLeaderboard/>
<c:set var="stateAbbrev" value="${requestScope.context.stateOrDefault.abbreviation}"/>

<head>
    <meta http-equiv="Content-Type" content="text/html;charset=utf-8"/>
    <meta name="Description" content="GreatSchools.net: Action for Education"/>
    <title>GreatSchools.net: Action for Education</title>
    <pageHelper:externalCss file="/res/css/content/election2008.css"/>
    <script type="text/javascript">
        <![CDATA[
        // <!--
        var defaultEmailValue = 'Enter Email Address';
        var defaultZipValue = 'Zip Code';

        function validateForm() {
            if (document.forms['edin08Form'].email.value.length == 0 ||
                document.forms['edin08Form'].email.value == defaultEmailValue ||
                document.forms['edin08Form'].email.value.indexOf('@') == -1 ||
                document.forms['edin08Form'].email.value.indexOf('.') == -1) {
                alert("Please enter a valid email address.");
                return false;
            } else if (document.forms['edin08Form'].zip.value.length != 5 ||
                document.forms['edin08Form'].zip.value == defaultZipValue) {
                alert("Please enter a valid 5-digit zip code.");
                return false;
            }
            return true;
        }

        function textSwap(textField, checkValue, changeValue) {
            if (textField.value == checkValue) {
                textField.value = changeValue;
            }
        }
        // -->
        ]]>
    </script>
</head>
<c:set var="pageName" value="Education 2008"/>
<ad:setSlotPrefix slotPrefix="Library_Microsite_EDin08"/>
<gsml:body adPageName="content/election2008" pageLayout="election2008" startAdHierarchyAtPage="true">

<![CDATA[
<!--[if IE]>
    <style type="text/css">
        .cleared { height: 1%; }
        form p.parentAdvisor input {
            position: relative;
