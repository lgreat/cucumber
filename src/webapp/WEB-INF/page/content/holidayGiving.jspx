    <pageHelper:externalJavascript file="/res/js/AC_RunActiveContent.js"/>
</head>

<c:set var="showAd"
       value="${!requestScope.pageHelper.adFree and !requestScope.pageHelper.adServedByCobrand}"/>

<ad:setSlotPrefix slotPrefix="Library_Microsite_Holiday_Giving"/>
<pageHelper:addOnLoadHandler handler="imgSetup();initWeek();showPopularArticles();"/>
<gsml:body adPageName="content/backToSchool" pageLayout="backToSchool" startAdHierarchyAtPage="true">

