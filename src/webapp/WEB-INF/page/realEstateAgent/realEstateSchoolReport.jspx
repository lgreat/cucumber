<jsp:root xmlns:jsp="http://java.sun.com/JSP/Page" version="2.0"
          xmlns="http://www.w3.org/1999/xhtml"
          xmlns:c="http://java.sun.com/jsp/jstl/core"
          xmlns:realEstate="urn:jsptagdir:/WEB-INF/tags/realEstateAgent"
        >
    <html>
    <jsp:directive.page contentType="text/html"/>

    <c:set var="countPerPage" value="5"/>

    <head>
        <title>Real Estate School Report | GreatSchools</title>
        <meta name="decorator" content="standardDecorator-v1"/>
        <link href="/res/css/15_pdf/chooser.css" rel="stylesheet" type="text/css" />
        <link href="/res/css/06_sprites/icon.css" rel="stylesheet" type="text/css" />
    </head>
    <body>

    <div class="divFooter">
        <div class="fl">
            <span class="strong"> Prepared for: </span>
            <span class=""> ${agentFirstName} ${agentLastName}, ${agentEmail} </span>
        </div>
        <div class="fr">
            <p class="smallest"> ${date} </p>
        </div>
    </div>

    <div class="container_24">
        <!-- TODO: header section to be included at the top of both pages -->
        <div class="fr">
            <img src="/res/img/logo/logo_GS_200x50.png" class="logo" alt="greatschools" />
        </div>

        <div class = "clearfix"/>

        <div class="fl header-left-component">
            <p class="">
                Your Neighborhood School Guide For:
            </p>
        </div>

        <div class = "clearfix"/>

        <div class="fl">
            <h1>
                ${streetNumber} ${streetName}
            </h1>
            <p class="strong">
                ${city}, ${state} ${zipcode}
                <c:if test="${not empty bed}">
                    <span class="header-vertical-border-l">Bedrooms: ${bed}</span>
                </c:if>
                <c:if test="${not empty bath}">
                    <span class="header-vertical-border-l">Bathrooms: ${bath}</span>
                </c:if>
                <c:if test="${not empty sqFeet}">
                    <span class="header-vertical-border-l">${sqFeet} Est. Sq. Ft.</span>
                </c:if>
            </p>
        </div>

        <div class="clearfix"/>

        <!-- end of header -->

        <p class="strong">The 5 closest schools to the property you are considering.</p>

        <div class="clearfix">
            <p class="">These results are provided only as a guide to prospective home buyers. Please check with
                your school district for more detailed enrollment information or visit www.greatschools.org.</p>
        </div>

        <c:forEach items="${schoolSearchResults}" var="school" varStatus="status" begin="1" end="5">
            <realEstate:schoolReportSection school="${school}" schoolMediaElement="${schoolMediaList[0]}"/>
            <!--<hr class="mvm">&lt;!&ndash; do not collapse &ndash;&gt;</hr>-->
        </c:forEach>

        <div class="chooser-pb" />

        <!-- TODO: header for second page to be inserted here -->

        <div class="">
            ${agentFirstName} ${agentLastName} <br/>
            ${agentCompany} <br/>
            office: ${agentWorkNumber}<br/>
            <c:if test="${not empty agentCellNumber}">
                mobile: ${agentCellNumber}<br/>
            </c:if>
            ${agentEmail}
        </div>

        <div class="fl">
            <![CDATA[
             <img src="${imgSrc}?content=${locationSearchUrl}&amp;width=150&amp;height=150&amp;isUrl=true"
                alt="Unable to generate QR code. Please try again."/>
            ]]>
        </div>

        <div class="fr">
            <p>
                For more information on these schools, please scan this QR code for access to your personalized GreatSchools
                School Search landing page. There you will find in-depth information on these schools including test scores,
                demographics, community ratings and much more.
            </p>
        </div>
    </div>


    </body>
    </html>
</jsp:root>
