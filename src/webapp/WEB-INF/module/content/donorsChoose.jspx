<?xml version="1.0" encoding="UTF-8"?>
<jsp:root version="2.0"
          xmlns:jsp="http://java.sun.com/JSP/Page"
          xmlns:c="http://java.sun.com/jsp/jstl/core"
          xmlns:promo="urn:jsptagdir:/WEB-INF/tags/promo"
          xmlns:link="urn:www.greatschools.net/taglib/link"
          xmlns:gsweb="/Users/youngfan/dev/GSWeb/src/webapp/WEB-INF/tld/gsweb.tld"
          xmlns:pageHelper="urn:jsptagdir:/WEB-INF/tags/pageHelper"
          xmlns:gsml="urn:jsptagdir:/WEB-INF/tags/gsml"
          xmlns:variant="urn:jsptagdir:/WEB-INF/tags/variant">

    <pageHelper:externalCss file="/res/css/content/donorsChoose.css"/>
      <![CDATA[
    <!--[if IE]>
    <style type="text/css">
    #donorsChoose li {
	margin: 0;
	height: 1%;
	background-position: left 6px;
	}
	</style>
	<![endif]-->
    ]]>

    
    <c:if test="${not empty requestScope.proposals}">

        <div id="donorsChoose">
        <div class="donorsChooseBox">
            <div class="outer">
                <div class="inner cleared">

                    <img id="donorsChooseOrg" alt="Powered by DonorsChoose.org" src="/res/img/content/donorsChoose/donorschoose_logo.gif"/>

                    <h2>Help classrooms in need: Donate to a teacher's project</h2>

                    <ul>
                    <c:forEach var="proposal" items="${requestScope.proposals}" varStatus="status">
                        <c:set var="proposalURL"><c:out value="${proposal.proposalURL}" escapeXml="true"/></c:set>
                        <li class="proposal cleared">
                            <div class="title">
                                <a href="${proposalURL}" target="_blank"><c:out value="${proposal.title}" escapeXml="true"/></a>
                            </div>
                            <div class="description">&amp;quot;<c:out value="${proposal.shortDescription}" escapeXml="true"/>&amp;quot;</div>
                            <div class="moreDetails left">
                                <c:choose>
                                    <c:when test="${not empty proposal.city}">
                                        ${proposal.city}, ${proposal.state}
                                    </c:when>
                                    <c:otherwise>
                                        ${longStateNames[proposal.id]}
                                    </c:otherwise>
                                </c:choose>
                                |
                                <span class="costtocomplete">$${proposal.roundedCostToComplete} needed</span>
                            </div>
                            <div class="give right">
                                <a href="${proposalURL}" target="_blank"><img alt="Give" src="/res/img/content/donorsChoose/give_button.gif"/></a>
                            </div>
                        </li>
                    </c:forEach>
                    </ul>

                    <a href="http://www.donorschoose.org/donors/search.html?zone=${zoneId}" target="_blank"><img id="seeMoreDonorsChoose" alt="See more teachers' requests" src="/res/img/content/donorsChoose/seemore_button.gif"/></a>

                    <link:donorsChooseExplained target="_blank" styleClass="learnHow" onclick="window.open(this.href, 'donorsChooseExplained', 'width=544,height=480,scrollbars=yes'); return false;">
                        Learn how this works
                    </link:donorsChooseExplained>

                    <a href="http://www.donorschoose.org" target="_blank"><img id="donorsChooseOrg" alt="Powered by DonorsChoose.org" src="/res/img/content/donorsChoose/donorschoose_logo.gif"/></a>

                </div>
            </div>
        </div>
        </div>

    </c:if>

</jsp:root>