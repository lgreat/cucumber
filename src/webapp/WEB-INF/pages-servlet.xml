<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!--
  - Application context definition for "springapp" DispatcherServlet.
  -->

<beans>

    <bean name="/subscribe.page"
        class="gs.web.SubscribeController"
        autowire="byName">
        <!-- /cgi-bin/site/signup.cgi/CA -->
        <property name="commandName">
            <value>subCmd</value>
        </property>
        <property name="bindOnNewForm">
            <value>true</value>
        </property>
        <property name="sessionForm">
            <value>true</value>
        </property>
        <property name="formView">
            <value>subscribe</value>
        </property>
        <property name="successView">
            <value>redirected to /thankyou.page to prevent multiple submits</value>
        </property>
        <property name="validator">
            <ref bean="subscribeValidator"/>
        </property>
    </bean>

    <bean name="/thankyou.page"
        class="org.springframework.web.servlet.mvc.ParameterizableViewController">
        <property name="viewName">
            <value>thankyou</value>
        </property>
    </bean>

    <bean name="/sorry.page"
        class="org.springframework.web.servlet.mvc.ParameterizableViewController">
        <property name="viewName">
            <value>fatalError</value>
        </property>
    </bean>

    <bean name="/sample.page"
        class="org.springframework.web.servlet.mvc.ParameterizableViewController">
        <property name="viewName">
            <value>sample</value>
        </property>
    </bean>

    <bean name="/overview.page"
        class="org.springframework.web.servlet.mvc.ParameterizableViewController">
        <property name="viewName">
            <value>overview</value>
        </property>
    </bean>

    <bean name="/insider.page"
        class="org.springframework.web.servlet.mvc.ParameterizableViewController">
        <property name="viewName">
            <value>insider/landing</value>
        </property>
    </bean>

    <bean name="/wall.page"
        class="org.springframework.web.servlet.mvc.ParameterizableViewController">
        <property name="viewName">
            <value>wall</value>
        </property>
    </bean>

    <bean name="/path1.page"
        class="org.springframework.web.servlet.mvc.ParameterizableViewController">
        <property name="viewName">
            <value>path1</value>
        </property>
    </bean>

    <bean name="/fiveStepsPopup.page"
        class="org.springframework.web.servlet.mvc.ParameterizableViewController">
        <property name="viewName">
            <value>fiveStepsPopup</value>
        </property>
    </bean>

    <bean id="subscribeValidator" class="gs.web.SubscribeValidator"></bean>

    <bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="viewClass">
            <value>org.springframework.web.servlet.view.JstlView</value>
        </property>
        <property name="prefix">
            <value>/WEB-INF/page/</value>
        </property>
        <property name="suffix">
            <value>.jspx</value>
        </property>
    </bean>
