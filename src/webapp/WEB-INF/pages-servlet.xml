    <!--            <map>-->
    <!--                <entry key="java.util.Date">-->
    <!--                    <bean class="gs.web.MyCustomDateEditor"></bean>-->
    <!--                </entry>-->
    <!--            </map>-->
    <!--        </property>-->
    <!--    </bean>-->
</beans>