<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
    <bean name="defaultHandlerMapping"
          class="org.springframework.web.servlet.handler.BeanNameUrlHandlerMapping">
        <property name="interceptors">
            <list>
                <ref local="sessionContextInterceptor"/>
            </list>
        </property>
    </bean>


    <bean id="sessionContextInterceptor"
          class="gs.web.SessionContextInterceptor"
          autowire="byName">
    </bean>

    <bean name="/search.module"
          class="org.springframework.web.servlet.mvc.ParameterizableViewController">
        <property name="viewName">
            <value>/search</value>
        </property>
    </bean>

    <bean name="/content/parentPoll.module"
          class="gs.web.content.ParentPollController"
          autowire="byName">
        <property name="viewName">
            <value>/parentPoll</value>
        </property>
    </bean>

    <bean name="/search/schoolsTable.module"
          class="org.springframework.web.servlet.mvc.ParameterizableViewController">
        <property name="viewName">
            <value>/search/schoolsTable</value>
        </property>
    </bean>

    <bean name="/header/cobrand.module"
          class="org.springframework.web.servlet.mvc.ParameterizableViewController">
        <property name="viewName">
            <value>/header/cobrand</value>
        </property>
    </bean>

    <bean name="/header/moveChoose.module"
          class="org.springframework.web.servlet.mvc.ParameterizableViewController">
        <property name="viewName">
            <value>/header/moveChoose</value>
        </property>
    </bean>

    <bean name="/footer/copyright.module"
          class="org.springframework.web.servlet.mvc.ParameterizableViewController">
        <property name="viewName">
            <value>/footer/copyright</value>
        </property>
    </bean>

    <bean name="/footer/searchEngine.module"
          class="org.springframework.web.servlet.mvc.ParameterizableViewController">
        <property name="viewName">
            <value>/footer/searchEngine</value>
        </property>
    </bean>

    <bean name="/footer/developmentCredits.module"
          class="org.springframework.web.servlet.mvc.ParameterizableViewController">
        <property name="viewName">
            <value>/footer/developmentCredits</value>
        </property>
    </bean>

    <bean name="/state/topDistricts.module"
          class="gs.web.state.TopDistrictsController"
          autowire="byName">
        <property name="viewName">
            <value>/unorderedList</value>
        </property>
    </bean>

    <bean name="/state/topCities.module"
          class="gs.web.state.TopCitiesController"
          autowire="byName">
        <property name="viewName">
            <value>/unorderedList</value>
        </property>
    </bean>

    <bean name="/geo/nearbyCities.module"
          class="gs.web.geo.NearbyCitiesController"
          autowire="byName">
        <property name="viewName">
            <value>/unorderedList</value>
        </property>
    </bean>

    <bean name="/community/mySchoolList.module"
          class="gs.web.community.MySchoolListController"
          autowire="byName">
        <property name="viewName">
            <value>/unorderedList</value>
        </property>
    </bean>

    <bean name="/geo/cityStats.module"
          class="gs.web.geo.GeoController"
          autowire="byName">
        <property name="viewName">
            <value>/geo/cityStats</value>
        </property>
    </bean>

    <bean name="/geo/citySchoolStats.module"
          class="gs.web.geo.GeoController"
          autowire="byName">
        <property name="viewName">
            <value>/geo/citySchoolStats</value>
        </property>
    </bean>

    <bean name="/promo/featuredArticles.module"
          class="gs.web.content.FeaturedArticlesController"
          autowire="byName">
        <property name="singleArticleViewName">
            <value>/promo/featuredArticles</value>
        </property>
        <property name="multipleArticlesViewName">
            <value>/unorderedList</value>
        </property>
    </bean>

    <bean name="/search/citydistrict.module"
          class="gs.web.search.CityDistrictController"
          autowire="byName">
        <constructor-arg>
            <ref bean="searcher"/>
        </constructor-arg>
    </bean>

    <bean name="/search/schoolFilters.module"
          class="gs.web.search.SchoolFiltersController"
          autowire="byName">
    </bean>

    <bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="viewClass">
            <value>org.springframework.web.servlet.view.JstlView</value>
        </property>
        <property name="prefix">
            <value>/WEB-INF/module/</value>
        </property>
        <property name="suffix">
            <value>.jspx</value>
        </property>
    </bean>

</beans>