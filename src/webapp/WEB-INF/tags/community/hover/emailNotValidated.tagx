<?xml version="1.0" encoding="UTF-8"?>
<jsp:root version="2.0"
          xmlns:jsp="http://java.sun.com/JSP/Page"
          xmlns:c="http://java.sun.com/jsp/jstl/core"
        >

    <c:if test="${requestScope.email ne null}">
        <script type="text/javascript">
            GSType.hover.emailNotValidated.setEmail('${email}');
        </script>
    </c:if>

    <c:if test="${param.email ne null}">
        <script type="text/javascript">
            GSType.hover.emailNotValidated.setEmail('${param.email}');
        </script>
    </c:if>

    <div id="valNewEmail" class="dialog_white" style="display:none;">
        <h2>Your email needs to be verified</h2>


        <p><strong>Whoops! It looks like we still need to verify your email.</strong>
            To do so, please click on the link in the email we sent you.
            Can't find the e-mail?  Click the button below and we'll send you a new one.
        </p>

        <button class="button-1" type="button" id="clsValNewEmail">Send a new email</button>
    </div>
</jsp:root>