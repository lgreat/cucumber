<?xml version="1.0" encoding="UTF-8"?>
<jsp:root version="2.0"
          xmlns:jsp="http://java.sun.com/JSP/Page"
        >
<jsp:directive.tag import="gs.web.util.context.SessionContextUtil"/>
<jsp:directive.tag import="gs.web.util.context.SessionContext"/>
<jsp:directive.tag body-content="empty"
                   description="Enables GPT synchronous mode on the calling page" />
<jsp:scriptlet>
    <![CDATA[
    SessionContext sessionContext = SessionContextUtil.getSessionContext(request);
    sessionContext.setGptAsynchronousModeEnabled(true);
    ]]>
    </jsp:scriptlet>
</jsp:root>