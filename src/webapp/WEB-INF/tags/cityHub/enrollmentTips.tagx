<?xml version="1.0" encoding="UTF-8"?>
<jsp:root version="2.0"
          xmlns:jsp="http://java.sun.com/JSP/Page"
          xmlns:c="http://java.sun.com/jsp/jstl/core"
          xmlns:fn="http://java.sun.com/jsp/jstl/functions"
        >

    <jsp:directive.attribute name="tips" required="true" type="java.util.ArrayList"/>
    <jsp:directive.attribute name="index" required="true" type="java.lang.Integer"/>

    <div class="carousel">
        <div class="mod standard_2-1 mtl">
            <div class="inner line">
                <div class="pvl tac">
                    <img src="/res/img/cityHubs/questionMark.png" alt="tips"/>
                    <h6 class="SourceSansPro-Semibold-h6 mtm">Did you know?</h6>
                    <c:choose>
                        <c:when  test="${fn:length(tips) lt 2}">
                            <div class="small bottom">
                                <c:forEach items="${tips}" var="tip">
                                    <c:if test="${not empty tip}">
                                        <div>${tip}</div>
                                    </c:if>
                                </c:forEach>
                            </div>
                        </c:when>
                        <c:otherwise>
                            <div class="js-carousel line">
                                <div class="unit size10of100">
                                <a href="#!" class="js-prev">
                                    <span class="iconx32g i-32-carouselLeft"><!--Do not collapse--></span>
                                </a>
                                    </div>
                                <div class="unit size80of100 small">
                                    <div class="cycle-slideshow"
                                         data-cycle-fx="fadeOut"
                                         data-cycle-slides="> div"
                                         data-cycle-timeout="10"
                                         data-index="${index}">
                                        <c:forEach items="${tips}" var="tip">
                                            <c:if test="${not empty tip}">
                                                <div>${tip}</div>
                                            </c:if>
                                        </c:forEach>
                                    </div>
                                </div>
                                <div class="unit size10of100 lastUnit">
                                <a href="#!" class="js-next">
                                    <span class="iconx32g i-32-carouselRight"><!--Do not collapse--></span>
                                </a>
                                </div>
                            </div>
                        </c:otherwise>
                    </c:choose>
                </div>
            </div>
        </div>
    </div>

</jsp:root>
