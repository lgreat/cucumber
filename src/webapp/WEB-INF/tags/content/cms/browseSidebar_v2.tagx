<?xml version="1.0" encoding="UTF-8"?>
<jsp:root version="2.0"
          xmlns:jsp="http://java.sun.com/JSP/Page"
          xmlns:c="http://java.sun.com/jsp/jstl/core"
          xmlns:fn="http://java.sun.com/jsp/jstl/functions"
          xmlns:link="urn:www.greatschools.org/taglib/link">
    <jsp:directive.attribute name="title" required="false" type="java.lang.String"/>
    <jsp:directive.attribute name="subtopics" required="false" type="java.util.List"/>
    <jsp:directive.attribute name="currentUri" required="false" type="java.lang.String"/>

    <c:if test="${not empty pageScope.subtopics}">
        <c:set var="hasNestedItems" value="${false}"/>

        <div class="bd">
            <h6 class="mam">${pageScope.title}</h6>
        </div>
        <div class="bd">

            <ul class="none small">
                <c:forEach var="subtopic" items="${pageScope.subtopics}" varStatus="subtopicStatus">
                    <c:if test="${not empty subtopic.subSubtopics}">
                        <c:set var="hasNestedItems" value="${true}"/>
                    </c:if>
                    <c:choose>
                        <c:when test="${hasNestedItems}">
                            <c:set var="className1" value="hasNested"/>
                        </c:when>
                        <c:otherwise>
                            <c:set var="className1" value=""/>
                        </c:otherwise>
                    </c:choose>
                    <li class="${className1}">

                        <c:choose>
                            <c:when test="${empty subtopic.subSubtopics}">
                                <!-- no nested items, so don't show triangle, and clicking subtopic title link should send user to browse page -->

                                <c:choose>
                                    <c:when test="${not empty currentUri and currentUri eq subtopic.moreLink.url}">
                                        ${subtopic.title}
                                    </c:when>
                                    <c:when test="${not empty subtopic.moreLink}">
                                        <a href="${subtopic.moreLink.url}">${subtopic.title}</a>
                                    </c:when>
                                    <c:otherwise>
                                        <c:choose>
                                            <c:when test="${fn:toLowerCase(subtopic.title) == 'videos'}">
                                                <link:cmsVideoGallery
                                                        topicCenterId="${topicCenter.contentKey.identifier}"
                                                        topicCenterUrl="${topicCenter.fullUri}"
                                                        topicIDs="${topicCenter.elementarySchoolTopicCenter ? null: subtopic.topicIDs}"
                                                        gradeIDs="${topicCenter.elementarySchoolTopicCenter ? null: subtopic.gradeIDs}"
                                                        subjectIDs="${topicCenter.elementarySchoolTopicCenter ? null: subtopic.subjectIDs}">${subtopic.title}</link:cmsVideoGallery>
                                            </c:when>
                                            <c:otherwise>
                                                <link:cmsCategoryBrowse topicIDs="${subtopic.topicIDs}"
                                                                        gradeIDs="${subtopic.gradeIDs}"
                                                                        subjectIDs="${subtopic.subjectIDs}"
                                                                        language="EN">${subtopic.title}</link:cmsCategoryBrowse>
                                            </c:otherwise>
                                        </c:choose>
                                    </c:otherwise>
                                </c:choose>
                            </c:when>
                            <c:otherwise>
                                <!-- nested items, show triangle, and clicking subtopic title link should only expand/collapse the nested links -->
                                <!-- DONE-9457 RANDALL: please fix jquery to make clicking on this link expand/collapse instead of going to the href -->
                                <div class="media">
                                    <span class='tn-twirly-closed img mrs'><!-- do not collapse --></span>
                                    <a class="outerNavLink bd" href="javascript:void(0);">${subtopic.title}</a>
                                </div>
                            </c:otherwise>
                        </c:choose>

                        <c:if test="${not empty subtopic.subSubtopics}">
                            <ul class="nested small">
                                <c:forEach var="section" items="${subtopic.subSubtopics}"
                                           varStatus="sectionStatus">
                                    <li>
                                        <c:choose>
                                            <c:when test="${not empty section.moreLink}">
                                                <a href="${section.moreLink.url}">${section.title}</a>
                                            </c:when>
                                            <c:otherwise>
                                                <link:cmsCategoryBrowse topicIDs="${section.topicIDs}"
                                                                        gradeIDs="${section.gradeIDs}"
                                                                        subjectIDs="${section.subjectIDs}"
                                                                        language="EN">${section.title}</link:cmsCategoryBrowse>
                                            </c:otherwise>
                                        </c:choose>
                                    </li>
                                </c:forEach>
                                <li class="lastOne">
                                    <c:choose>
                                        <c:when test="${not empty subtopic.moreLink}">
                                            <a href="${subtopic.moreLink.url}">${subtopic.title}</a>
                                        </c:when>
                                        <c:otherwise>
                                            <link:cmsCategoryBrowse topicIDs="${subtopic.topicIDs}"
                                                                    gradeIDs="${subtopic.gradeIDs}"
                                                                    subjectIDs="${subtopic.subjectIDs}"
                                                                    language="EN">See all &amp;raquo;</link:cmsCategoryBrowse>
                                        </c:otherwise>
                                    </c:choose>
                                </li>
                            </ul>
                        </c:if>
                    </li>
                    <c:set var="hasNestedItems" value="${false}"/>
                </c:forEach>
            </ul>
        </div>
    </c:if>
</jsp:root>