<?xml version="1.0" encoding="UTF-8"?>
<jsp:root version="2.0"
          xmlns:jsp="http://java.sun.com/JSP/Page"
          xmlns:c="http://java.sun.com/jsp/jstl/core">

    <jsp:directive.attribute name="authorBios" required="true" type="java.util.List"/>
    <jsp:directive.attribute name="showDisclaimer" required="true" type="java.lang.Boolean"/>

    <c:set var="hasBios" value="${false}"/>
    <c:set var="biosContent">
        <c:if test="${not empty pageScope.authorBios}">
            <c:forEach var="bio" items="${pageScope.authorBios}">
                <c:if test="${not empty bio}">
                    ${bio}
                    <c:set var="hasBios" value="${true}"/>
                </c:if>
            </c:forEach>
        </c:if>
    </c:set>

    <div class="mod articleAttribution">
        <div class="inner rnd3">
            <div class="bd">
                <c:if test="${hasBios}">
                        ${biosContent}
                </c:if>

                <c:if test="${pageScope.showDisclaimer}">
                    <p><em>Advice from our experts is not a substitute for professional diagnosis or treatment from a health-care provider or learning expert familiar with your unique situation. We recommend consulting a qualified professional if you have concerns about your child's condition.</em></p>
                </c:if>
            </div>
        </div>
    </div>
</jsp:root>