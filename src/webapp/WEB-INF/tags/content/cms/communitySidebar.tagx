<?xml version="1.0" encoding="UTF-8"?>
<jsp:root version="2.0"
          xmlns:jsp="http://java.sun.com/JSP/Page"
          xmlns:link="urn:www.greatschools.net/taglib/link"
          xmlns:gsweb="gstaglib"
          xmlns:ad="urn:jsptagdir:/WEB-INF/tags/ad"
          xmlns:c="http://java.sun.com/jsp/jstl/core">
    <!-- if you pass in content, the More-In module will be shown (using its categories); otherwise, the Most Popular content module -->
    <jsp:directive.attribute name="content" required="false" type="gs.data.content.cms.CmsContent"/>

    <div id="sideBar">
        <div class="module">
            <div class="header">
                <span class="title1white">Search Community</span>
            </div>
            <div class="body1bg">
                <form action="/search/contentSearch.page">
                    <input class="fltlft db_search_input" type="text" name="q" size="24"/>
                    <button class="fltrt btn25ni" type="submit"><span class="rnd4"><span class="rnd4">Search</span></span></button>
                </form>
                <br class="clearfloat"/>
            </div>
            <div class="body2bg sdrt">
                <div class="subhead2">Browse by topic</div>
                <div class="fltlft">
                    <ul class="topics text2_180">
                        <li><link:discussion discussionId="1" fullUri="uri">Great Parenting</link:discussion></li>
                        <li><link:discussion discussionId="1"
                                             fullUri="uri">Academics &amp;amp; Activities</link:discussion></li>
                        <li><link:discussion discussionId="1" fullUri="uri">Learning Disabilities</link:discussion></li>
                        <li><link:discussion discussionId="1" fullUri="uri">Improve Your School</link:discussion></li>
                        <li><link:discussion discussionId="1" fullUri="uri">Prep for College</link:discussion></li>
                    </ul>
                </div>
                <div class="fltlft">
                    <ul class="topics text2_180">
                        <li><link:discussion discussionId="1" fullUri="uri">Finding a School</link:discussion></li>
                        <li><link:discussion discussionId="1" fullUri="uri">Preschool</link:discussion></li>
                        <li><link:discussion discussionId="1" fullUri="uri">Elementary</link:discussion></li>
                        <li><link:discussion discussionId="1" fullUri="uri">Middle School</link:discussion></li>
                        <li><link:discussion discussionId="1" fullUri="uri">High School</link:discussion></li>
                    </ul>
                </div>
                <br class="clearfloat"/>
            </div>

            <c:import url="/community/browseLocalBoards.module"/>
        </div>
        <!-- end module -->

        <ad:AboveFold_300x250/>
        <gsweb:adTagGenerator position="House_Ad_300x137"/>

        <br class="modulespacer"/>

        <c:choose>
            <c:when test="${not empty content}">
                <jsp:include page="/content/cms/moreInCategory.module?topics=${
                  content.commaSeparatedTopicIds}&amp;subjects=${
                  content.commaSeparatedSubjectIds}&amp;grades=${
                  content.commaSeparatedGradeIds}&amp;excludeType=${
                  content.contentKey.type}&amp;excludeContentId=${
                  content.contentKey.identifier}&amp;language=${
                  content.language}&amp;strict=true&amp;style=fall2009&amp;maxResults=10"/>
                <!-- NOTE: The default max results is 5. If you need it different here
                     than on the other pages, you can add &amp;maxResults=15 (or some other number)
                     to the end of the url above. -->
            </c:when>
            <c:otherwise>
                <jsp:include page="/content/cms/mostPopularContent.module?style=fall2009"/>
            </c:otherwise>
        </c:choose>

    </div>
    <!-- end sideBar -->

</jsp:root>
