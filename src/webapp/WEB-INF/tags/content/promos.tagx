<?xml version="1.0" encoding="UTF-8"?>
<jsp:root version="2.0"
          xmlns:jsp="http://java.sun.com/JSP/Page"
          xmlns:c="http://java.sun.com/jsp/jstl/core"
          xmlns:pageHelper="urn:jsptagdir:/WEB-INF/tags/pageHelper"
          xmlns:promo="urn:jsptagdir:/WEB-INF/tags/promo"
          xmlns:ad="urn:jsptagdir:/WEB-INF/tags/ad"
          xmlns:gsml="urn:jsptagdir:/WEB-INF/tags/gsml"
          xmlns:fn="http://java.sun.com/jsp/jstl/functions"
        >
    <jsp:directive.tag body-content="scriptless"/>
    <jsp:directive.attribute name="referredBy" required="true" description="Omniture page name of page that this hover appears on"/>
    <!--pageHelper:externalCss file="/res/css/ads.css"/-->

    <ad:House_Ad_300x137 referredBy="${referredBy}"/>
    <ad:AboveFold_300x600/>
    
    <c:if test="${fn:contains(pageContext.request.requestURI,'specialNeeds')}">
        <map name="specialNeedsContentProvidedBy" id="specialNeedsContentProvidedBy">
            <area shape="rect" href="http://www.additudemag.com" target="_blank"
                  coords="155,0 300,124" alt="Content provided by: Schwablearning.org and ADDitude magazine"/>
        </map>
        <gsml:img id="provided_by" 
                  src="/res/img/ADD-logo_01.gif"
                  alt="Content provided by: ADDitude magazine"
                  usemap="#specialNeedsContentProvidedBy"/>
    </c:if>
    <c:if test="${fn:contains(pageContext.request.requestURI,'holidayLearning') or fn:contains(pageContext.request.requestURI,'mediaChoices')}">
        <div style="width:295px;text-align:center;padding-left:5px;border-top: 1px dashed #ccc;padding-top:20px;margin-top:10px;">
            <ad:commonSenseMedia/>
        </div>
    </c:if>

    <c:if test="${fn:contains(pageContext.request.requestURI,'tutoring') }">
            <!--ad:BelowFold_Top_300x125 /-->
            <!-- ad:BelowFold_Bottom_300x125 /-->
        <ad:multiTextAd blurb="Advertiser links"/>
    </c:if>
    <div style="border-top: 1px dashed #ccc;padding-top:20px;margin-top:10px;">
        <promo:nthGraderMedallions referredBy="${referredBy}"/>
    </div>
</jsp:root>
