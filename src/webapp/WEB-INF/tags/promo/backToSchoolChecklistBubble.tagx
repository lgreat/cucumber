</div>

    <script type="text/javascript">
// setHover is used to make IE6behave by inserting an IFRAME
// to "shim" the drop-downs above form select controls and media objects.
        var sfHover = function() {
            // Support the standard nav without a class of nav.
            if(!document.getElementById("btsChecklistBubble")) return;
            var el = document.getElementById("btsChecklistBubble");
            var pa = document.getElementById("header");
            setHover(el,pa);
        };
        var setHover = function(box,parent) {
            var ieMat=document.createElement("iframe");
            ieMat.src="javascript:false";
            ieMat.scrolling="no";
            ieMat.frameBorder="0";
            ieMat.id = "bubbleIframe";
            ieMat.className = "show";
            ieMat.style.width=box.offsetWidth+"px";
            ieMat.style.height=box.offsetHeight+"px";
            ieMat.style.zIndex="100";
            parent.insertBefore(ieMat,box);
            box.style.zIndex="101";
        };
        /*@cc_on
            @if (@_jscript_version == 5.6){
                window.attachEvent('onload', sfHover);
            }
            @else {
                return;
            }
            @end
        @*/
        var sitePreferences = subCookie.getObject("site_pref");

        if (sitePreferences == undefined || sitePreferences.hideBtsChecklist != "true") {
            jQuery('#btsChecklistBubble').addClass('show');
        }

        jQuery('.btsChecklistBubbleClose').click(function() {
            subCookie.setObjectProperty("site_pref", "hideBtsChecklist", true, 9001);
            jQuery('#btsChecklistBubble').removeClass('show');
            jQuery('#bubbleIframe').removeClass('show');
            return false;
        });

        jQuery('#btsChecklistBubbleNoThanks').click(function() {
            subCookie.setObjectProperty("site_pref", "hideBtsChecklist", true, 9001);
            jQuery('#btsChecklistBubble').removeClass('show');
            jQuery('#bubbleIframe').removeClass('show');
            return false;
        });

        jQuery('#btsChecklistBubbleRemindLater').click(function() {
            subCookie.setObjectProperty("site_pref", "hideBtsChecklist", true, 0);
            jQuery('#btsChecklistBubble').removeClass('show');
            jQuery('#bubbleIframe').removeClass('show');
            return false;
        });

        

    </script>
</jsp:root>