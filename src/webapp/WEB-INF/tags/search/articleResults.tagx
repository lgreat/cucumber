<?xml version="1.0" encoding="UTF-8"?>
<jsp:root version="2.0"
          xmlns:jsp="http://java.sun.com/JSP/Page"
          xmlns:c="http://java.sun.com/jsp/jstl/core"
          xmlns:link="urn:www.greatschools.org/taglib/link"
          xmlns:gsweb="gstaglib">
    <jsp:directive.attribute name="results" required="true" type="java.util.Collection"/>
    <div id="searchResultsList">
        <c:forEach var="articleResult" items="${results}">
            <c:set var="articleTitle" value="${gsweb:highlight(articleResult.headline, q, 'name')}"/>

            <div class="article result">
                <h3>
                    <c:if test="${articleResult.type eq 'article'}">
                        <link:article articleId="${articleResult.id}" styleClass="highlight">
                            <c:out value="${articleTitle}" escapeXml="false"/>
                        </link:article>
                    </c:if>
                    <c:if test="${articleResult.type eq 'cms_feature'}">
                        <link:cmsContent contentKey="${articleResult.id}" fullUri="${articleResult.fullUri}" styleClass="highlight">
                        <c:out value="${articleTitle}" escapeXml="false"/>
                        </link:cmsContent>
                    </c:if>
                    <c:if test="${articleResult.type eq 'term'}">
                        <link:glossaryTerm termId="${articleResult.id}" styleClass="highlight">
                            <c:out value="${articleTitle}" escapeXml="false"/>
                        </link:glossaryTerm>
                    </c:if>
                </h3>
                <div class="abstract">
                    <c:out value="${gsweb:highlight(gsweb:abbreviate(articleResult.context, 45), q, 'context')}" escapeXml="false"/>
                </div>
            </div>
        </c:forEach>
    </div>
</jsp:root>
