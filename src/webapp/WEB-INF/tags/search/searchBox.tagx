<?xml version="1.0" encoding="UTF-8"?>
<jsp:root version="2.0"
          xmlns:jsp="http://java.sun.com/JSP/Page"
          xmlns:c="http://java.sun.com/jsp/jstl/core"
          xmlns:gsml="urn:jsptagdir:/WEB-INF/tags/gsml"
          xmlns:gsweb="gstaglib">
    <jsp:directive.tag body-content="empty"/>
    <!-- New Search
    Set the .textfield width in global.css to 50%
    <c:set var="searchPrompt" value="School Name/District, City or Keyword"/>
    <g:url var="searchpage" value="/search/search.page"/>
    <form name="headerSearch" method="get" action="${searchpage}"
    onsubmit="if (this.q.value == '' || this.q.value == '${searchPrompt}') { alert('You must specify search text'); return false;} ${triggerPopunder}">
        <gsweb:stateSelector cssClass="globalsearch" onChange="window.location.href='/modperl/go/' + this.value.toUpperCase()"
