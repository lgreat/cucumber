        ]]>
    </script>

    <div id="searchResultsHeader" class="cleared">
        <div id="schoolResultsHeader">
            School Name
        </div>
        <div id="ratingsHeader">
            GreatSchools Rating
        </div>
        <div id="reviewsHeader">
            Parent Rating
        </div>
    </div>
    <form method="get" action="/compareSchools.page">
        <input type="hidden" name="state" value="${requestScope.context.stateOrDefault.abbreviation}"/>
    <div id="searchResultsList">
        <c:forEach var="schoolResult" items="${results}" >
            <c:set var="school" value="${schoolResult.school}"/>
            <c:set var="rating" value="${schoolResult.greatSchoolsRating}"/>
            <c:set var="parentRating" value="${schoolResult.parentRating}"/>
            <c:set var="parentRatingCount" value="${schoolResult.parentRatingCount}"/>
            <c:set var="reviewMap" value="${schoolResult.reviewMap}" />

                <div class="result cleared">
                <div class="school">
                    <input type="hidden" id="school_lc_${school.id}" value="${school.levelCode}"/>
                    <input type="hidden" id="school_name_${school.id}" value="${school.name}"/>
                    <h3><link:schoolProfileOverview school="${school}" title="${school.name}" styleClass="highlight">
                    <c:out value="${school.name}" escapeXml="false"/>
                    </link:schoolProfileOverview></h3>
                    <div class="about">
                        <span class="st">${school.type.schoolTypeName}</span>
                        <c:if test="${not empty school.gradeLevels.rangeString}">
                            &#183; <span class="gl">${school.gradeLevels.rangeString}</span>
                        </c:if>
                        <c:if test="${not empty school.enrollmentOrCapacity}">
                            &#183; <span class="enrollment">${school.enrollmentOrCapacity} student${(school.enrollmentOrCapacity eq 1) ? '' : 's'}</span>
                        </c:if>
                    </div>

                    <address>${school.physicalAddress.street}<c:if test="${not empty school.physicalAddress.streetLine2}">, ${school.physicalAddress.streetLine2}</c:if></address>
                    <address>${school.physicalAddress.cityStateZip}</address>
                    <div class="phone">${school.phone}</div>
                    <c:if test="${not empty school.district}">
                        <div class="district">
                            District: ${school.district.name}
                        </div>
                    </c:if>
                    <c:if test="${params.lc ne 'p'}">
                        <div class="resultcontrols">
                            <link:mySchoolList school="${school}">Add to my school list &gt;</link:mySchoolList>
                            <br />
                            <div class="compare_schools_row">
                                <gsml:checkbox
                                        name="sc"
                                        value="${requestScope.context.stateOrDefault.abbreviation}${school.id}"
                                        styleClass="compare_checkbox"
                                        styleId="compare_schools_${school.id}"
                                        onclick="evaluateCheckboxes();"/>
                                <!-- Can't use label for attr because IE7 doesn't apply it to images inside labels -->
                                <label class="compare_label"
                                       id="compare_schools_label_${school.id}"><gsml:img
                                        src="/res/img/button/button_check_to_compare.gif"
                                        alt="Check to compare"
                                        onclick="document.getElementById('compare_schools_${school.id}').click();"/></label>
                                <label class="compare_error"
                                       id="compare_schools_error_${school.id}"
                                       style="display: none;"><gsml:img
                                        src="/res/img/button/button_check_two_more.gif"
                                        alt="Check two or more"
                                        onclick="document.getElementById('compare_schools_${school.id}').click();"/></label>
                                <span class="compare_submit"
                                      id="compare_schools_submit_${school.id}"
                                      style="display: none;"><input type="image"
                                                                    name="compare"
                                                                    src="/res/img/button/button_compare_now.gif"
                                                                    alt="Compare now" onclick="return evaluateSchoolsForCompare();"/></span>
                            </div>
                            <!--<link:schoolCompareSchool school="${school}">Compare to nearby schools &gt;</link:schoolCompareSchool>-->
                        </div>
                    </c:if>
                </div>
                <div class="rating">
                    <c:choose>
                        <c:when test="${empty rating}">
                            <gsml:img src="/res/img/school/ratings/na.gif" alt="This school has not been rated because sufficient test score data is not available."/>
                        </c:when>
                        <c:otherwise>
                            <link:schoolProfileRating school="${school}">
                                <gsml:img src="/res/img/school/ratings/${rating}.gif"
                                          alt="GreatSchools Rating: ${rating} out of 10. GreatSchools Ratings are based on test results. 10 is best."/>
                            </link:schoolProfileRating>
                        </c:otherwise>
                    </c:choose>
                </div>
                <div class="review">
                    <p class="stars">
                        <c:choose>
                            <c:when test="${empty parentRating}">
                                <link:schoolProfileParentReview school="${school}">
                                    <gsml:img src="/res/img/search/rateit.jpg"
                                              rollover="/res/img/search/rateit_on.jpg"
                                              alt="Be the first to rate!"/>
                                </link:schoolProfileParentReview>
                            </c:when>
                            <c:otherwise>
                                <link:schoolProfileParentReview school="${school}">
                                    <gsml:img src="/res/img/map/ratings_parent_city_${parentRating}.gif"
                                              alt="${parentRating} out of 5 stars" styleClass="starsOnly"/>
                                </link:schoolProfileParentReview>
                                    (${parentRatingCount})
                            </c:otherwise>
                        </c:choose>
                    </p>

                    <c:if test="${reviewMap.reviewCount > 0}">
                        <p>${reviewMap.reviewBlurb}...
                            <br/><link:schoolProfileParentReview school="${school}" title="Read all reviews">
                            <c:choose>
                                <c:when test="${reviewMap.reviewCount eq 1}">Read the full review &#62;</c:when>
                                <c:otherwise>Read all ${reviewMap.reviewCount} reviews &#62;</c:otherwise>
                            </c:choose>
                        </link:schoolProfileParentReview >
                        </p>
                    </c:if>
                </div>
            </div>
        </c:forEach>
    </div>
    </form>
</jsp:root>
