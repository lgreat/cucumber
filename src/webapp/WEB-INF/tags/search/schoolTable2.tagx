<?xml version="1.0" encoding="UTF-8"?>
<jsp:root version="2.0"
          xmlns:jsp="http://java.sun.com/JSP/Page"
          xmlns:c="http://java.sun.com/jsp/jstl/core"
          xmlns:fn="http://java.sun.com/jsp/jstl/functions"
          xmlns:gsml="urn:jsptagdir:/WEB-INF/tags/gsml"
          xmlns:link="urn:www.greatschools.net/taglib/link"
          xmlns:pageHelper="urn:jsptagdir:/WEB-INF/tags/pageHelper"
          xmlns:gsweb="gstaglib">
    <jsp:directive.tag body-content="empty"/>
    <jsp:directive.attribute name="schools" required="true"
                             type="java.util.Collection"/>
    <pageHelper:externalCss file="http://yui.yahooapis.com/2.5.2/build/container/assets/skins/sam/container.css"/>
    <pageHelper:externalJavascript file="http://yui.yahooapis.com/2.5.2/build/yahoo-dom-event/yahoo-dom-event.js"/>
    <pageHelper:externalJavascript file="http://yui.yahooapis.com/2.5.2/build/container/container-min.js"/>

    <c:set var="results" value="${schools}"/>

    <![CDATA[
      <!--[if IE]>
        <style type="text/css">
            .compare_schools_row {
                margin-top: 0;
                margin-left: -4px;
            }
            .compare_schools_row label img {
                left: 2px;
            }
            .compare_schools_row .compare_submit input {
                top: 1px;
                left: 7px;
            }
            .compare_schools_row .compare_error img {
                top: 3px;
            }
        </style>
      <![endif]-->
    ]]>

    <div id="dialog_c" class="yui-skin-sam">
        <div id="myDialog">
            <div class="hd">&amp;nbsp;</div>
            <div class="bd">
                <c:forEach var="curLevel" items="e,m,h">
                    <gsweb:form method="get" action="/compareSchools.page">
                        <input type="hidden" name="state" value="${requestScope.context.stateOrDefault.abbreviation}"/>
                        <input type="hidden" name="hover_compare" value="true"/>
                        <div id="hover_${curLevel}" style="display:none;">
                            <span class="hover_lc_title">
                                <c:choose>
                                    <c:when test="${curLevel eq 'e'}">Elementary School</c:when>
                                    <c:when test="${curLevel eq 'm'}">Middle School</c:when>
                                    <c:when test="${curLevel eq 'h'}">High School</c:when>
                                </c:choose>
                            </span>
                            <span class="hover_compareButton">
                                <input type="image"
                                       name="compare"
                                       src="/res/img/school/compare/compare.gif" alt="Compare"/>
                            </span>
                            <c:forEach var="schoolResult" items="${results}" >
                                <c:set var="school" value="${schoolResult.school}"/>
                                <c:if test="${fn:startsWith(school.levelCode, curLevel)}">
                                    <input type="hidden"
                                           id="hover_input_${school.id}"
                                           name="sc"
                                           disabled="disabled"
                                           value="${requestScope.context.stateOrDefault.abbreviation}${school.id}"/>
                                    <div id="hover_div_${school.id}" style="display:none">${school.name}</div>
                                </c:if>
                            </c:forEach>
                        </div>
                    </gsweb:form>
                </c:forEach>
                <div id="hover_close">
                    <gsml:img src="/res/img/button/closeWindow.gif" alt="Close window" onclick="myDialog.cancel();"/>
                </div>
            </div>
        </div>
    </div>
    <script language="JavaScript" type="text/javascript">
        <![CDATA[
        <!--
        var handleCancel = function() {
            this.cancel();
        }
