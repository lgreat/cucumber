    <c:if test="${isCityBrowse ne true and isDistrictBrowse ne true and includeDistance eq true}">
        <div id="js-radius" class="lastUnit size22of100 mrm mtm ${!commandAndFields.nearbySearch? 'dn':''}"
             >
            <search:dropdownFilters id="distance" label="Any distance"
                                    title="" hideApplyReset="${true}">
                <div class="grid_4">
                    <div class="line">
                        <div class="unit size50of100">
                            <div>
                                <form:radiobutton type="radio" name="distance" class="js-applyFilters"
                                                  data-gs-custom-link="Search_Results_filter_distance_1" value="1"
                                                  id="js-radius-1" path="schoolSearchCommand.distance"/>
                                <label class="checkbox mls" for="js-radius-1">1 mile</label>
                            </div>
                            <div>
                                <form:radiobutton type="radio" name="distance" class="js-applyFilters"
                                                  data-gs-custom-link="Search_Results_filter_distance_2" value="2"
