<!--
Global filter = filters on any type of search.
i.e. school type filter, grade level filter
-->

<jsp:directive.attribute name="includeDistance" required="false" description="default is false"/>

<div id="jq-filterBar" class="pbm">
<div class="line">
    <div id="js-schoolTypes" class="unit size22of100 mrm mlm mtm">
        <search:dropdownFilters id="stDropdown" label="All school types"
                                title="" hideApplyReset="${true}">
            <div class="pas small bottom"> Show only:</div>

            <!--<div class="mod standard_6-3">-->
            <div>
                <spring:checkbox path="schoolSearchCommand.st" type="checkbox" class="jq-school-type js-applyFilters"
                                 name="st"
                                 id="js-school-type-public" value="public"
                                 data-gs-custom-link="Search_Results_filter_type_public"/>
                <label class="checkbox mls" for="js-school-type-public">Public</label>
            </div>
            <div>
                <spring:checkbox path="schoolSearchCommand.st" type="checkbox" class="jq-school-type js-applyFilters"
                                 name="st"
                                 id="js-school-type-charter" value="charter"
                                 data-gs-custom-link="Search_Results_filter_type_charter"/>
                <label class="checkbox mls" for="js-school-type-charter">Public charter</label>
            </div>
            <div>
                <spring:checkbox path="schoolSearchCommand.st" type="checkbox" class="jq-school-type js-applyFilters"
                                 name="st"
                                 id="js-school-type-private" value="private"
                                 data-gs-custom-link="Search_Results_filter_type_private"/>
                <label class="checkbox mls" for="js-school-type-private">Private</label>
            </div>
            <!--<div class="mbm js-applyFilters">
                <spring:checkbox path="schoolSearchCommand.religious"  type="checkbox"
                    id="js-school-subtype-religious" class="jq-school-type" name="religious" value="true"/>
                <label for="js-school-subtype-religious">Religious</label>
            </div>
            <div class="mbm js-applyFilters">
                <spring:checkbox path="schoolSearchCommand.religious"  type="checkbox"
                                 id="js-school-subtype-nonreligious" class="jq-school-type" name="religious" value="false"/>
                <label for="js-school-subtype-nonreligious">Nonreligious</label>
            </div>-->
            <!--</div>-->
        </search:dropdownFilters>
        <!--</div>-->
    </div>
    <div id="js-gradeLevels" class="unit size22of100 mrm mtm">
        <!--<div class="triggerMouseLeave">-->
        <search:dropdownFilters id="gradeLevels" label="All grade levels"
                                title="" hideApplyReset="${true}">
            <div class="pas small bottom"> Show only:</div>
            <div>
                <spring:checkbox path="schoolSearchCommand.gradeLevels" type="checkbox"
                                 class="jq-grade-level js-applyFilters" name="gradeLevels"
                                 id="js-grade-level-p" value="p"
                                 data-gs-custom-link="Search_Results_filter_grade_PK"/>
                <label class="checkbox mls" for="js-grade-level-p">Preschool</label>
            </div>
            <div>
                <spring:checkbox path="schoolSearchCommand.gradeLevels" type="checkbox"
                                 class="jq-grade-level js-applyFilters" name="gradeLevels"
                                 id="js-grade-level-e" value="e"
                                 data-gs-custom-link="Search_Results_filter_grade_elem"/>
                <label class="checkbox mls" for="js-grade-level-e">Elementary School</label>
            </div>
            <div>
                <spring:checkbox path="schoolSearchCommand.gradeLevels" type="checkbox"
                                 class="jq-grade-level js-applyFilters" name="gradeLevels"
                                 id="js-grade-level-m" value="m"
                                 data-gs-custom-link="Search_Results_filter_grade_middle"/>
                <label class="checkbox mls" for="js-grade-level-m">Middle School</label>
            </div>
            <div>
                <spring:checkbox path="schoolSearchCommand.gradeLevels" type="checkbox"
                                 class="jq-grade-level js-applyFilters" name="gradeLevels"
                                 id="js-grade-level-h" value="h"
                                 data-gs-custom-link="Search_Results_filter_grade_high"/>
                <label class="checkbox mls" for="js-grade-level-h">High School</label>
            </div>
            <!--</div>-->
        </search:dropdownFilters>
        <!--</div>-->
    </div>
    <div id="js-ratingsDropDown" class="size22of100 unit mrm mtm">
        <search:dropdownFilters id="ratingCategories" label="Any rating" hideApplyReset="${true}" noclear="${true}">
            <search:searchFilterWithCount name="ratingCategories" styleClass="js-advFilters"
                                          value="low" label="Below average (1-3)"
                                          omnitureCustomLink="GSRatings_BelowAverage"/>
            <search:searchFilterWithCount name="ratingCategories" styleClass="js-advFilters"
                                          value="average" label="Average (4-7)" omnitureCustomLink="GSRatings_Average"/>
            <search:searchFilterWithCount name="ratingCategories" styleClass="js-advFilters"
                                          value="high" label="Above average (8-10)"
                                          omnitureCustomLink="GSRatings_AboveAverage"/>
        </search:dropdownFilters>
