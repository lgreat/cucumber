    <div id="mobile-header" class="js-mobile-header hd">
        <div class="mobile-logo-link">
            <link:home>
                <gsml:img id="mobileLogo2" src="/res/img/logo/logo_GS2010_330x110.png" height="30"
                          alt="GreatSchools: Involved Parents. Successful Kids"/>
            </link:home>
        </div>

        <div class="mobile-header-nav">
            <link:home>
                <span class="sprite search"><!-- --></span>
            </link:home>
            <a href="#" class="top-nav-goto">
                <span class="sprite menu"><!-- --></span>
            </a>
        </div>
    </div>


    <ul id="mobile-sub-nav" style="display:none">
        <li id="sub-nav-findSchool">
            <link:home><span class="sprite search"><!-- --></span>Find a School</link:home>
        </li>
        <li id="sub-nav-mss">
            <a href="#"><span class="sprite home"><!-- --></span>My Saved Schools</a>
        </li>
        <li id="sub-nav-nlSubscribe">
            <a href="/email/newslettersSignUp-mobile.page"><span class="sprite check"><!-- --></span>Subscribe to Newsletter</a>
        </li>
    </ul>

