<?xml version="1.0" encoding="UTF-8"?>
<jsp:root
        xmlns:jsp="http://java.sun.com/JSP/Page" version="1.2"
        xmlns="http://www.w3.org/1999/xhtml"
        xmlns:gsml="urn:jsptagdir:/WEB-INF/tags/gsml"
        xmlns:link="urn:www.greatschools.org/taglib/link"
        >

    <style type="text/css">
        #mobile-header {
            height: 40px;
            background-color: #4CA5D5;
            position: relative;
        }

        .mobile-logo-link {
            position: absolute;
            top: 5px;
            left: 1px;
        }

        .mobile-header-nav {
            margin: 5px 4px 0 0;
            float: right;
        }

        .mobile-header-nav a {
            margin-right: 4px;
            display: inline;
        }

        #mobile-sub-nav {
            background-color: #EEE;
            border: 1px solid #CCC;
            color: #333;
            font-weight: bold;
            margin: 0;
            padding: 0;
        }
        #mobile-sub-nav li {
            border: 1px solid #CCC;
            padding: 0.5em;
        }
