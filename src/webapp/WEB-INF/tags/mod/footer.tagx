<?xml version="1.0" encoding="UTF-8"?>
<jsp:root version="2.0"
          xmlns:jsp="http://java.sun.com/JSP/Page"
          xmlns:c="http://java.sun.com/jsp/jstl/core"
          xmlns:fn="http://java.sun.com/jsp/jstl/functions"
          xmlns:gsml="urn:jsptagdir:/WEB-INF/tags/gsml"
          xmlns:ad="urn:jsptagdir:/WEB-INF/tags/ad"
          xmlns:mod="urn:jsptagdir:/WEB-INF/tags/mod"
          xmlns:link="urn:www.greatschools.net/taglib/link"
          xmlns:gsweb="gstaglib"
        >
    <jsp:directive.tag import="gs.web.util.context.SessionContext"/>
    <jsp:directive.tag import="gs.web.util.context.SessionContextUtil"/>
    <jsp:directive.tag body-content="empty" description="Common GS footer tag"/>
    <jsp:directive.attribute name="showAd" required="false" type="java.lang.Boolean"
                             description="Show the ad in the footer or not."/>
    <jsp:directive.attribute name="showSeoFooter" required="false" type="java.lang.Boolean"
                             description="Show the SEO links in the footer or not."/>
    <jsp:directive.attribute name="showOnlyCopyrightFooter" required="false" type="java.lang.Boolean"
                             description="Show only the copyright footer."/>

    <jsp:scriptlet>
        SessionContext sessionContext = SessionContextUtil.getSessionContext(request);
        request.setAttribute("communityHost", sessionContext.getSessionContextUtil().getCommunityHost(request));
    </jsp:scriptlet>

    <c:if test="${requestScope.pageHelper.showingFooter}">
        <div id="footer" class="${(showOnlyCopyrightFooter or requestScope.context.customCobrandedFooter)?'custom':''}">
            <c:if test="${showAd ne false}">
                <div id="footerAd">
                    <ad:footerAd/>
                </div>
            </c:if>

            <div id="navFooter" class="${(showOnlyCopyrightFooter or requestScope.context.customCobrandedFooter)?'hidden':''}">
                <ul class="navColumns">
                    <li class="first">
                        <div><link:research state="${context.stateOrDefault}"
                                            rel="nofollow">Find the Right School</link:research></div>
                        <ul>
                            <li><link:research state="${context.stateOrDefault}"
                                               rel="nofollow">Compare Schools</link:research></li>
                            <li>
                                <c:if test="${context.city ne null}">
                                    <link:city city="${context.city.name}" state="${context.city.state}">${context.city.name} Schools</link:city>
                                </c:if>
                            </li>
                            <li><link:schoolChoiceCenter>School Choice Tips</link:schoolChoiceCenter></li>
                            <li><link:movingWithKids>Moving with Kids</link:movingWithKids></li>
                        </ul>
                    </li>
                    <li class="second">
                        <div><link:articleLibrary rel="nofollow">Grade-By-Grade Support</link:articleLibrary></div>
                        <ul>
                            <li><a href="#">Preschool</a></li>
                            <li><a href="#">Kindergarten</a></li>
                            <li><a href="#">First Grade</a></li>
                            <li><a href="#">Second Grade</a></li>
                            <li><a href="#">Third Grade</a></li>
                            <li><a href="#">Fourth Grade</a></li>
                            <li><a href="#">Fifth Grade</a></li>
                            <li><a href="#">Middle School</a></li>
                            <li><a href="#">High School</a></li>
                        </ul>
                    </li>
                    <li class="third">
                        <div><link:articleLibrary>Education Topics</link:articleLibrary></div>
                        <ul>
                            <li><link:tutoring>Homework</link:tutoring></li>
                            <li><link:tutoring>Tutoring</link:tutoring></li>
                            <li><link:topicSearch query="bullying"
                                                  rel="nofollow">Bullying</link:topicSearch></li>
                            <li><link:specialNeeds>Learning Disabilities</link:specialNeeds></li>
                            <li><link:topicSearch query="standardized tests"
                                                  rel="nofollow">Standardized Testing</link:topicSearch></li>
                            <li><link:countdownToCollege>College Prep</link:countdownToCollege></li>
                            <li><link:healthyKids>Healthy Kids</link:healthyKids></li>
                            <li><link:newsletterCenter>Free Newsletters</link:newsletterCenter></li>
                        </ul>
                    </li>
                    <li class="fourth">
                        <div><gsml:a href="http://${communityHost}">Parent Community</gsml:a></div>
                        <ul>
                            <li><a href="http://${communityHost}/q-and-a">Q&amp;amp;A</a></li>
                            <li><a href="http://${communityHost}/groups">Groups</a></li>
                            <li><a href="http://${communityHost}/advice">Advice</a></li>
                            <li>
                                <c:set var="linkText" value="My Local"/>
                                <c:if test="${context.cityId gt 0}">
                                    <c:set var="linkText" value="My ${context.city.name} Local"/>
                                </c:if>
                                <a href="http://${communityHost}/q-and-a/browse?sort=timestamp&amp;amp;page=1&amp;amp;order=desc&amp;amp;tab=local">${linkText}</a>
                            </li>
                            <li><link:loginOrRegister rel="nofollow">Join!</link:loginOrRegister></li>
                        </ul>
                    </li>
                    <li class="fifth">
                        <div><gsml:a href="/about/aboutUs.page" rel="nofollow">About GreatSchools</gsml:a></div>
                        <ul>
                            <li><gsml:a href="/about/aboutUs.page" rel="nofollow">About Us</gsml:a></li>
                            <li><gsml:a href="http://blogs.greatschools.net/BillsBlog">Bills Blog</gsml:a></li>
                            <li><link:pressRoom rel="nofollow">Media Room</link:pressRoom></li>
                            <li><link:webbyAwardThanks rel="nofollow">Our Awards</link:webbyAwardThanks></li>
                            <li><gsml:a href="/cgi-bin/static/jobs.inc"
                                        rel="nofollow">Jobs</gsml:a></li>
                            <li><gsml:a href="/about/partnerOpportunities.page"
                                        rel="nofollow">Advertisers</gsml:a></li>
                            <li><gsml:a href="/about/partnerOpportunities.page"
                                        rel="nofollow">License our content</gsml:a></li>
                            <li><gsml:a href="/cgi-bin/static/link_to_us.tmpl/${context.stateOrDefault}"
                                        rel="nofollow">Link to Greatschools</gsml:a></li>
                            <li><link:contactUs rel="nofollow">Contact Us</link:contactUs></li>
                        </ul>
                    </li>
                </ul>
            </div>

            <div id="footerGS">
                <c:set var="footerCopyright">
                    <div id="footerCopyright">
                        &amp;#169;1998-2008 GreatSchools Inc. All Rights Reserved.
                        <link:termsOfUse>Terms of Use</link:termsOfUse> &#124;
                        <gsml:a rel="nofollow" href="/about/privacyStatement.page">Privacy Policy</gsml:a>
                        <br/>GreatSchools is a 501(c)(3) not-for-profit organization
                    </div>
                </c:set>
                <c:choose>
                    <c:when test="${showOnlyCopyrightFooter or requestScope.context.customCobrandedFooter}">
                        ${footerCopyright}
                    </c:when>
                    <c:otherwise>

                        <div id="footerImg">
                            <link:webbyAwardThanks><gsml:img src="/res/img/promo/webby/footer.gif"
                                                             alt="The Webby Awards - Best Family and Parenting Site - 2007 People's Voice Awards"/></link:webbyAwardThanks>
                        </div>

                        <div id="footerContent">
                            <c:if test="${showExtendedFooter eq true}">
                                <div id="footerText">
                                    GreatSchools empowers and inspires parents to get involved
                                    in their children's development and educational success.
                                </div>
                            </c:if>
                            <c:if test="${showSeoFooter ne false}">
                                <mod:seoFooter/>
                            </c:if>
                            ${footerCopyright}
                        </div>
                    </c:otherwise>
                </c:choose>
            </div>
            <div style="clear:both;" />
        </div>
    </c:if>
</jsp:root>