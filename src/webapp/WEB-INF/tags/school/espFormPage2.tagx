        <label>What instructional and/or curriculum modes does your school use, if any?</label>
        <br/>
        <school:espCheckboxWithLabel key="instructional_model" value="none" label="None"/>
        <br/>
        <school:espCheckboxWithLabel key="instructional_model" value="accellerated_credit" label="Accelerated credit learning"/>
        <br/>
        <school:espCheckboxWithLabel key="instructional_model" value="adult_ed" label="Adult education"/>
        <br/>
        <school:espCheckboxWithLabel key="instructional_model" value="AP_courses" label="Advanced placement courses"/>
        <br/>
        <school:espCheckboxWithLabel key="instructional_model" value="classical" label='Classical (e.g., focuses on the "classics")'/>
        <br/>
        <school:espCheckboxWithLabel key="instructional_model" value="core_knowledge" label="Core knowledge"/>
        <br/>
        <school:espCheckboxWithLabel key="instructional_model" value="continuation" label="Continuation"/> <!-- TODO: double check this -->
        <br/>
        <school:espCheckboxWithLabel key="instructional_model" value="direct_instruction" label="Direct instruction"/>
        <br/>
        <school:espCheckboxWithLabel key="instructional_model" value="ged" label="GED"/>
        <br/>
        <school:espCheckboxWithLabel key="instructional_model" value="gifted" label="Gifted / High performing"/> <!-- TODO: double check this -->
        <br/>
