        <label for="js_instructional_model_other">Other:</label>
        <input id="form_instructional_model_other" class="js_otherField" type="text" name="instructional_model_other" value="${responseMap['instructional_model_other'].value}" maxlength="40" placeholder="[Please indicate]"/>
        <br/>
        <br/>


