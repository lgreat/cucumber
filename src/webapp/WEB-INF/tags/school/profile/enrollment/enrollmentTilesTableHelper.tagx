<?xml version="1.0" encoding="UTF-8"?>
<jsp:root version="2.0"
          xmlns:jsp="http://java.sun.com/JSP/Page"
          xmlns:c="http://java.sun.com/jsp/jstl/core"
          xmlns:fn="http://java.sun.com/jsp/jstl/functions"
        >

    <jsp:directive.attribute name="rowList" type="java.util.List" required="true"/>
    <jsp:directive.attribute name="tableTitle" type="java.lang.String" required="true"/>
    <jsp:directive.attribute name="acceptanceHeader" type="java.lang.Boolean" required="false"/>
    <c:if test="${fn:length(rowList) gt 0}">
        <div class="mod standard_1-1 ptm">
            <div class="inner">
                <div class="hd">
                    <h4 class="pvm plm bottom" id="">${tableTitle}</h4>
                </div>
                <div class="bd">
                    <c:if test="${acceptanceHeader}">
                        <div class="mvl mhm">
                            <hr class="keyline2"/>
                            <p class="bottom pam">
                                <span class="medium_bold bottom mrs">${acceptanceRate} out of 10</span>
                                <span class="small bottom">students were accepted for the ${acceptanceRateYear} school year.</span>
                            </p>
                            <hr class="keyline2"/>
                        </div>
                    </c:if>
                    <table class="tableType1" border="0">
                        <col width="200"/>
                        <col width="auto"/>
                        <tbody class="striped">

                        <c:forEach var="row" items="${rowList}" varStatus="status">
                            <c:choose>
                                <c:when test='${(status.index+1)%2 eq 0}'>
                                    <c:set var="rowColor" value="even" scope="page"/>
                                </c:when>
                                <c:otherwise>
                                    <c:set var="rowColor" value="odd" scope="page"/>
                                </c:otherwise>
                            </c:choose>
                            <tr class="${rowColor}">
                                <td>${row.question}</td>
                                <!-- Now display the data by looping over each data element -->
                                <td>
                                    <c:forEach var="value" items="${row.response}">
                                        <div class="">${value}</div>
                                    </c:forEach>
                                </td>
                            </tr>
                        </c:forEach>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </c:if>

</jsp:root>