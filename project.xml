<project>
    <!-- the version of maven's project object model -->

    <pomVersion>3</pomVersion>

    <extend>
        ${basedir}/../GSData/metadata/maven/project-dependencies.xml
    </extend>


    <!-- a unique name for this project -->
    <id>gs-web</id>

    <groupId>gs-web</groupId>
    <!-- a short but descriptive name for the project -->
    <name>GS Web Project</name>

    <!-- details about the organization that 'owns' the project -->
    <organization>
        <name>GreatSchools.net</name>
        <url>http://www.GreatSchools.net/</url>
        <logo>http://maven.apache.org/images/jakarta-logo-blue.gif</logo>
    </organization>
    <!-- the year the project started -->

    <inceptionYear>2004</inceptionYear>
    <package>gs.web</package>

    <reports>
        <report>maven-junit-report-plugin</report>
        <report>maven-clover-plugin</report>
        <report>maven-jdepend-plugin</report>
        <report>maven-javadoc-plugin</report>
        <report>maven-tasklist-plugin</report>
        <report>taglib</report>
    </reports>

    <dependencies>

        <dependency>
            <groupId>gs</groupId>
            <artifactId>gs-data</artifactId>
            <version>${pom.currentVersion}</version>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>

        <dependency>
            <id>servletapi</id>
            <version>2.4</version>
        </dependency>

        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>jsp-api</artifactId>
            <version>2.0</version>
        </dependency>

        <dependency>
            <id>jstl</id>
            <version>1.1.2</version>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>

        <dependency>
            <groupId>taglibs</groupId>
            <artifactId>standard</artifactId>
            <version>1.1.2</version>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>taglibs</groupId>
            <artifactId>taglibs-cache</artifactId>
            <version>1.2</version>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>opensymphony</groupId>
            <artifactId>sitemesh</artifactId>
            <version>2.2.1</version>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>

        <dependency>
            <groupId>displaytag</groupId>
            <artifactId>displaytag</artifactId>
            <version>1.1</version>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>

        <dependency>
            <groupId>springframework</groupId>
            <artifactId>spring-mock</artifactId>
            <version>2.0.5</version>
        </dependency>

        <!-- HttpUnit dependencies -->
        <dependency>
            <groupId>httpunit</groupId>
            <artifactId>httpunit</artifactId>
            <version>1.6</version>
            <properties>
                <cactus.bundle>true</cactus.bundle>
            </properties>
        </dependency>

        <dependency>
            <groupId>jdom</groupId>
            <artifactId>jdom</artifactId>
            <version>1.0</version>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>

        <!--<dependency>-->
