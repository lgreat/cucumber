        <!-- GWT dependencies -->
        <dependency>
            <groupId>com.google.gwt</groupId>
            <artifactId>gwt-servlet</artifactId>
            <version>1.2.22</version>
            <type>jar</type>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>com.google.gwt</groupId>
            <artifactId>gwt-user</artifactId>
            <version>1.2.22</version>
        </dependency>
        <dependency>
            <!-- This is in our local repository at  http://maven.dev.greatschools.net. -->
            <!-- It's included in the GWT distribution and used by the gwt:compile goal -->
            <groupId>gwt</groupId>
            <artifactId>gwt-dev-mac</artifactId>
            <version>1.2.22</version>
        </dependency>
        <dependency>
            <groupId>com.totsp.gwt</groupId>
            <artifactId>maven-googlewebtoolkit-plugin</artifactId>
            <version>1.0.4</version>
            <type>plugin</type>
        </dependency>
        <dependency>
            <groupId>jfreechart</groupId>
            <artifactId>jfreechart</artifactId>
            <version>1.0.5</version>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>            
        </dependency>
        <dependency>
            <groupId>jfreechart</groupId>
            <artifactId>jcommon</artifactId>
            <version>1.0.9</version>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>axis</groupId>
            <artifactId>axis</artifactId>
            <version>1.4</version>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>axis</groupId>
            <artifactId>axis-jaxrpc</artifactId>
            <version>1.4</version>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>axis</groupId>
            <artifactId>axis-saaj</artifactId>
            <version>1.4</version>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>axis</groupId>
            <artifactId>axis-wsdl4j</artifactId>
            <version>1.5.1</version>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>commons-discovery</groupId>
            <artifactId>commons-discovery</artifactId>
            <version>0.4</version>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
    </dependencies>

    <build>
        <sourceDirectory>src/java</sourceDirectory>
        <unitTestSourceDirectory>src/test</unitTestSourceDirectory>
        <unitTest>
            <includes>
                <include>**/*Test.java</include>
            </includes>
        </unitTest>
        <resources>
            <resource>
                <directory>src/conf</directory>
                <includes>
                    <include>*.properties</include>
                </includes>
            </resource>
            <resource>
                <directory>src/java</directory>
                <includes>
                    <include>**/*.xml</include>
                    <include>**/*.txt</include>
                    <include>**/*.properties</include>
                </includes>
                <excludes>
                    <exclude>*.java</exclude>
                </excludes>
            </resource>
            <resource>
                <directory>${basedir}/../GSData/src/conf</directory>
                <includes>
                    <include>log4j-production.properties</include>
                </includes>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-idea-plugin</artifactId>
                <configuration>
                    <libraries>
                        <library>
                            <name>gs-data</name>
                            <exclude>true</exclude>
                        </library>
                    </libraries>
                </configuration>
            </plugin>
            <plugin>
                <groupId>com.totsp.gwt.plugins</groupId>
                <artifactId>maven-googlewebtoolkit-plugin</artifactId>
                <version>1.0.4</version>
            </plugin>
        </plugins>
    </build>
</project>
